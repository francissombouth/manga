{% extends 'base.html.twig' %}

{% block title %}{{ oeuvre.titre }} - {{ oeuvre.auteur ? oeuvre.auteur.nom : 'Auteur inconnu' }}{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }
    
    .header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 1rem 0;
        box-shadow: 0 2px 20px rgba(0,0,0,0.1);
        position: sticky;
        top: 0;
        z-index: 100;
    }
    
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    
    .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .logo {
        font-size: 1.5rem;
        font-weight: bold;
        color: #4a5568;
        text-decoration: none;
    }
    
    .nav-links {
        display: flex;
        gap: 2rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }
    
    .nav-links a {
        color: #4a5568;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }
    
    .nav-links a:hover {
        color: #667eea;
    }
    
    .breadcrumb {
        background: white;
        padding: 1rem 0;
        border-bottom: 1px solid #e2e8f0;
    }
    
    .breadcrumb-list {
        display: flex;
        gap: 0.5rem;
        align-items: center;
        list-style: none;
        margin: 0;
        padding: 0;
        color: #718096;
    }
    
    .breadcrumb-list a {
        color: #4a5568;
        text-decoration: none;
    }
    
    .breadcrumb-list a:hover {
        color: #667eea;
    }
    
    .oeuvre-header {
        background: white;
        padding: 3rem 0;
        margin-bottom: 2rem;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .oeuvre-info {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 2rem;
        align-items: start;
    }
    
    .oeuvre-cover {
        width: 200px;
        height: 300px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 3rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }
    
    .oeuvre-details h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        color: #2d3748;
    }
    
    .oeuvre-author {
        font-size: 1.2rem;
        color: #718096;
        margin-bottom: 1rem;
        font-style: italic;
    }
    
    .oeuvre-meta {
        display: flex;
        gap: 2rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }
    
    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: #f7fafc;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        color: #4a5568;
    }
    
    .oeuvre-description {
        line-height: 1.8;
        color: #4a5568;
        font-size: 1.1rem;
    }
    
    .chapitres-section {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .section-title {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: #2d3748;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .chapitres-grid {
        display: grid;
        gap: 1.5rem;
    }
    
    .chapitre-card {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: all 0.3s;
        border-left: 4px solid #667eea;
    }
    
    .chapitre-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }
    
    .chapitre-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1rem;
    }
    
    .chapitre-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #2d3748;
        margin: 0;
    }
    
    .chapitre-number {
        background: #667eea;
        color: white;
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: bold;
    }
    
    .chapitre-resume {
        color: #718096;
        line-height: 1.6;
        margin-bottom: 1rem;
    }
    
    .chapitre-actions {
        display: flex;
        gap: 1rem;
        justify-content: space-between;
        align-items: center;
    }
    
    .btn {
        padding: 0.6rem 1.5rem;
        border-radius: 20px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        font-size: 0.9rem;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }
    
    .chapitre-meta {
        font-size: 0.8rem;
        color: #a0aec0;
    }
    
    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #718096;
    }
    
    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }
    
    .back-btn {
        background: #f7fafc;
        color: #4a5568;
        border: 2px solid #e2e8f0;
        margin-bottom: 2rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .back-btn:hover {
        background: #edf2f7;
        border-color: #cbd5e0;
        transform: translateY(-2px);
    }
    
    @media (max-width: 768px) {
        .oeuvre-info {
            grid-template-columns: 1fr;
            text-align: center;
        }
        
        .oeuvre-cover {
            width: 150px;
            height: 225px;
            margin: 0 auto;
        }
        
        .oeuvre-meta {
            justify-content: center;
        }
        
        .container {
            padding: 0 1rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<header class="header">
    <div class="container">
        <nav class="nav">
            <a href="{{ path('app_home') }}" class="logo">üéå MangaTh√®que</a>
            <ul class="nav-links">
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li><a href="/api/docs">API</a></li>
            </ul>
        </nav>
    </div>
</header>

<div class="breadcrumb">
    <div class="container">
        <ul class="breadcrumb-list">
            <li><a href="{{ path('app_home') }}">Accueil</a></li>
            <li>‚Üí</li>
            <li>{{ oeuvre.titre }}</li>
        </ul>
    </div>
</div>

<main class="container">
    <a href="{{ path('app_home') }}" class="btn back-btn">‚Üê Retour √† la collection</a>
    
    <section class="oeuvre-header">
        <div class="container">
            <div class="oeuvre-info">
                <div class="oeuvre-cover">
                    {% if oeuvre.type == 'Manhwa' %}
                        üá∞üá∑
                    {% else %}
                        üéå
                    {% endif %}
                </div>
                <div class="oeuvre-details">
                    <h1>{{ oeuvre.titre }}</h1>
                    {% if oeuvre.auteur %}
                    <p class="oeuvre-author">par {{ oeuvre.auteur.nom }}{% if oeuvre.auteur.prenom %} {{ oeuvre.auteur.prenom }}{% endif %}</p>
                    {% endif %}
                    
                    <div class="oeuvre-meta">
                        <div class="meta-item">
                            <span>üìö</span>
                            <span>{{ oeuvre.type }}</span>
                        </div>
                        {% if oeuvre.datePublication %}
                        <div class="meta-item">
                            <span>üìÖ</span>
                            <span>{{ oeuvre.datePublication|date('Y') }}</span>
                        </div>
                        {% endif %}
                        <div class="meta-item">
                            <span>üìñ</span>
                            <span>{{ oeuvre.chapitres|length }} chapitre{{ oeuvre.chapitres|length > 1 ? 's' : '' }}</span>
                        </div>
                        {% if oeuvre.auteur and oeuvre.auteur.nationalite %}
                        <div class="meta-item">
                            <span>üåç</span>
                            <span>{{ oeuvre.auteur.nationalite }}</span>
                        </div>
                        {% endif %}
                    </div>
                    
                    {% if oeuvre.resume %}
                    <p class="oeuvre-description">{{ oeuvre.resume }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    
    <section class="chapitres-section">
        <h2 class="section-title">
            üìñ Chapitres
        </h2>
        
        {% if oeuvre.chapitres|length > 0 %}
        <div class="chapitres-grid">
            {% for chapitre in oeuvre.chapitres %}
            <div class="chapitre-card">
                <div class="chapitre-header">
                    <h3 class="chapitre-title">{{ chapitre.titre }}</h3>
                    <span class="chapitre-number">{{ chapitre.ordre }}</span>
                </div>
                
                {% if chapitre.resume %}
                <p class="chapitre-resume">{{ chapitre.resume|slice(0, 150) }}{% if chapitre.resume|length > 150 %}...{% endif %}</p>
                {% endif %}
                
                <div class="chapitre-actions">
                    {% if chapitre.mangadxChapterId %}
                        <a href="{{ path('mangadx_chapter_show', {id: chapitre.mangadxChapterId}) }}" class="btn btn-primary">
                            Lire le chapitre
                        </a>
                    {% else %}
                        <a href="{{ path('app_chapitre_show', {id: chapitre.id}) }}" class="btn btn-primary">
                            Lire le chapitre (local)
                        </a>
                    {% endif %}
                    <span class="chapitre-meta">
                        Ajout√© le {{ chapitre.createdAt|date('d/m/Y') }}
                    </span>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="empty-state">
            <div class="empty-state-icon">üìö</div>
            <h3>Aucun chapitre disponible</h3>
            <p>Cette ≈ìuvre n'a pas encore de chapitres.</p>
        </div>
        {% endif %}
    </section>
</main>
{% endblock %} 