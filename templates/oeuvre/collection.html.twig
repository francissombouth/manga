{% extends 'base.html.twig' %}

{% block title %}Mes Favoris - MangaTh√®que{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/vortex-theme.css') }}">
<style>
.collection-header {
    background: var(--gradient-card);
    padding: 3rem;
    border-radius: 20px;
    border: 1px solid var(--border-secondary);
    box-shadow: var(--shadow-secondary);
    margin-bottom: 3rem;
    text-align: center;
}

.collection-title {
    font-size: 2.5rem;
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--text-primary), var(--accent-primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.collection-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-top: 2rem;
}

.stat-item {
    text-align: center;
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-primary);
    display: block;
}

.stat-label {
    color: var(--text-secondary);
    font-weight: 600;
    margin-top: 0.5rem;
}

.empty-collection {
    text-align: center;
    padding: 4rem;
    background: var(--gradient-card);
    border-radius: 20px;
    border: 1px solid var(--border-secondary);
}

.empty-collection h3 {
    color: var(--text-primary);
    font-size: 1.8rem;
    margin-bottom: 1rem;
}

.empty-collection p {
    color: var(--text-secondary);
    margin-bottom: 2rem;
}

.browse-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--gradient-primary);
    color: white;
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-secondary);
}

.browse-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
    text-decoration: none;
    color: white;
}

.oeuvres-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
}

.oeuvre-card {
    background: var(--gradient-card);
    border-radius: 15px;
    border: 1px solid var(--border-secondary);
    box-shadow: var(--shadow-secondary);
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
}

.oeuvre-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-glow);
}

.oeuvre-card.has-new-chapter::before {
    content: "üî• Nouveau";
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--gradient-primary);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    z-index: 2;
}

.oeuvre-cover {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: var(--bg-secondary);
}

.oeuvre-info {
    padding: 1.5rem;
}

.oeuvre-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.oeuvre-author {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1rem;
}

.oeuvre-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.oeuvre-type {
    background: var(--accent-primary);
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 600;
}

.chapters-count {
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.oeuvre-actions {
    display: flex;
    gap: 0.5rem;
}

.btn-read {
    flex: 1;
    background: var(--gradient-primary);
    color: white;
    border: none;
    padding: 0.8rem;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    text-align: center;
}

.btn-read:hover {
    transform: translateY(-1px);
    color: white;
    text-decoration: none;
}

@media (max-width: 768px) {
    .collection-stats {
        flex-direction: column;
        gap: 1.5rem;
    }
    
    .oeuvres-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
    }
    
    .collection-header {
        padding: 2rem;
    }
    
    .collection-title {
        font-size: 2rem;
    }
}
</style>
{% endblock %}

{% block body %}
{% include 'partials/_navigation.html.twig' %}

<div class="container">
    <div class="collection-header">
        <h1 class="collection-title">‚≠ê Mes Favoris</h1>
        <p style="color: var(--text-secondary); font-size: 1.1rem;">
            Retrouvez facilement toutes vos ≈ìuvres pr√©f√©r√©es du catalogue
        </p>
        
        {% if total_oeuvres > 0 %}
            <div class="collection-stats">
                <div class="stat-item">
                    <span class="stat-number">{{ total_oeuvres }}</span>
                    <div class="stat-label">≈íuvre{{ total_oeuvres > 1 ? 's' : '' }}</div>
                </div>
                <div class="stat-item">
                    <span class="stat-number">{{ total_chapitres }}</span>
                    <div class="stat-label">Chapitre{{ total_chapitres > 1 ? 's' : '' }}</div>
                </div>
                <div class="stat-item">
                    <span class="stat-number">{{ oeuvres_with_stats|filter(item => item.has_new_chapter)|length }}</span>
                    <div class="stat-label">Nouveaut√©s</div>
                </div>
            </div>
        {% endif %}
    </div>

    {% if oeuvres_with_stats is empty %}
        <div class="empty-collection">
            <h3>‚≠ê Aucun favori pour le moment</h3>
            <p>Parcourez notre catalogue et marquez vos ≈ìuvres pr√©f√©r√©es en favoris !</p>
            <a href="{{ path('mangadx_home') }}" class="browse-btn">
                <span>üìö</span>
                <span>D√©couvrir le catalogue</span>
            </a>
        </div>
    {% else %}
        <div class="oeuvres-grid">
            {% for item in oeuvres_with_stats %}
                {% set oeuvre = item.oeuvre %}
                <div class="oeuvre-card{% if item.has_new_chapter %} has-new-chapter{% endif %}">
                    {% if oeuvre.couverture %}
                        <img src="{{ path('image_proxy') }}?url={{ oeuvre.couverture|url_encode }}" 
                             alt="{{ oeuvre.titre }}" 
                             class="oeuvre-cover" 
                             loading="lazy"
                             onerror="this.src='{{ path('image_proxy') }}';">
                    {% else %}
                        <div class="oeuvre-cover" style="display: flex; align-items: center; justify-content: center; color: var(--text-secondary); font-size: 3rem;">
                            üìñ
                        </div>
                    {% endif %}
                    
                    <div class="oeuvre-info">
                        <h3 class="oeuvre-title">{{ oeuvre.titre }}</h3>
                        
                        {% if oeuvre.auteur %}
                            <div class="oeuvre-author">üë§ {{ oeuvre.auteur.nom }}</div>
                        {% endif %}
                        
                        <div class="oeuvre-meta">
                            <span class="oeuvre-type">{{ oeuvre.type }}</span>
                            <span class="chapters-count">
                                üìñ {{ item.chapitres_count }} chapitre{{ item.chapitres_count > 1 ? 's' : '' }}
                            </span>
                        </div>
                        
                        <div class="oeuvre-actions">
                            <a href="{{ path('app_oeuvre_show', {id: oeuvre.id}) }}" class="btn-read">
                                Consulter
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %} 