{% endblock %}

{% block body %}
<div class="back-to-home">
    <a href="{{ path('mangadx_home') }}" class="back-btn">
        üè† Retour √† l'accueil
    </a>
</div>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">üéå MangaTh√®que</div>
            <h1 class="auth-title">Connexion</h1>
            <p class="auth-subtitle">Connectez-vous pour acc√©der √† votre collection</p>
        </div>

        {% if error %}
            <div class="auth-error">
                <span>‚ö†Ô∏è</span>
