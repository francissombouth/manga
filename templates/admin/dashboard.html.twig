{% extends 'base.html.twig' %}

{% block title %}Administration - MangaThèque{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/vortex-theme.css') }}">
<style>
.admin-container {
    min-height: 100vh;
    background: var(--bg-primary);
    padding-top: 2rem;
}

.admin-header {
    background: var(--gradient-card);
    border: 1px solid var(--border-secondary);
    border-radius: 20px;
    padding: 2rem;
    margin-bottom: 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.admin-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 40%, rgba(99, 102, 241, 0.1) 0%, transparent 50%);
    pointer-events: none;
}

.admin-title {
    font-size: 2.5rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
    position: relative;
    z-index: 2;
}

.admin-subtitle {
    color: var(--text-secondary);
    font-size: 1.1rem;
    position: relative;
    z-index: 2;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
}

.stat-card {
    background: var(--gradient-card);
    border: 1px solid var(--border-secondary);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
}

.stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 80% 20%, rgba(99, 102, 241, 0.05) 0%, transparent 50%);
    pointer-events: none;
}

.stat-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-glow);
}

.stat-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    display: block;
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-primary);
    margin-bottom: 0.5rem;
    position: relative;
    z-index: 2;
}

.stat-label {
    color: var(--text-secondary);
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    z-index: 2;
}

.admin-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
}

.action-card {
    background: var(--gradient-card);
    border: 1px solid var(--border-secondary);
    border-radius: 20px;
    padding: 2rem;
}

.action-card h3 {
    color: var(--text-primary);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem 1.5rem;
    background: var(--bg-card);
    border: 2px solid var(--border-secondary);
    border-radius: 12px;
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-right: 1rem;
    margin-bottom: 1rem;
}

.action-btn:hover {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
    color: white;
    text-decoration: none;
    transform: translateY(-2px);
}

.action-btn.primary {
    background: var(--gradient-primary);
    border-color: var(--accent-primary);
    color: white;
}

.recent-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
}

.recent-card {
    background: var(--gradient-card);
    border: 1px solid var(--border-secondary);
    border-radius: 20px;
    padding: 2rem;
}

.recent-card h3 {
    color: var(--text-primary);
    font-size: 1.3rem;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.recent-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: 10px;
    margin-bottom: 0.8rem;
    transition: all 0.3s ease;
}

.recent-item:hover {
    background: var(--accent-primary);
    color: white;
    transform: translateX(5px);
}

.recent-item-info {
    flex: 1;
}

.recent-item-title {
    font-weight: 600;
    margin-bottom: 0.2rem;
}

.recent-item-meta {
    font-size: 0.85rem;
    opacity: 0.7;
}

.recent-item-date {
    font-size: 0.8rem;
    opacity: 0.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

@media (max-width: 768px) {
    .container {
        padding: 0 1rem;
    }
    
    .admin-actions {
        grid-template-columns: 1fr;
    }
    
    .recent-section {
        grid-template-columns: 1fr;
    }
}
</style>
{% endblock %}

{% block body %}
{% include 'partials/_navigation.html.twig' %}

<div class="admin-container">
    <div class="container">
        <div class="admin-header">
            <h1 class="admin-title">⚙️ Administration</h1>
                            <p class="admin-subtitle">Gestion des œuvres et chapitres depuis l'API MangaDx</p>
        </div>

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <!-- Statistiques -->
        <div class="stats-grid">
            <div class="stat-card">
                <span class="stat-icon">📚</span>
                <div class="stat-number">{{ stats.total_oeuvres }}</div>
                <div class="stat-label">Œuvres</div>
            </div>
            <div class="stat-card">
                <span class="stat-icon">📖</span>
                <div class="stat-number">{{ stats.total_chapitres }}</div>
                <div class="stat-label">Chapitres</div>
            </div>
            <div class="stat-card">
                <span class="stat-icon">✍️</span>
                <div class="stat-number">{{ stats.total_auteurs }}</div>
                <div class="stat-label">Auteurs</div>
            </div>
            <div class="stat-card">
                <span class="stat-icon">🏷️</span>
                <div class="stat-number">{{ stats.total_tags }}</div>
                <div class="stat-label">Tags</div>
            </div>
        </div>

        <!-- Actions rapides -->
        <div class="admin-actions">
            <div class="action-card">
                <h3>📚 Gestion des Œuvres MangaDx</h3>
                <a href="{{ path('admin_oeuvres') }}" class="action-btn">
                    <span>📋</span>
                    <span>Voir toutes les œuvres</span>
                </a>
                <a href="{{ path('admin_oeuvre_new') }}" class="action-btn">
                    <span>➕</span>
                    <span>Ajouter une œuvre MangaDx</span>
                </a>
                <a href="{{ path('admin_import_mangadx') }}" class="action-btn" style="background: linear-gradient(135deg, #ff6b6b, #ee5a24); border-color: #ff6b6b; color: white;">
                    <span>📥</span>
                    <span>Import depuis API</span>
                </a>
                <a href="{{ path('admin_import_popular') }}" class="action-btn" style="background: linear-gradient(135deg, #ffa726, #ff8f00); border-color: #ffa726; color: white;">
                    <span>🚀</span>
                    <span>Import API</span>
                </a>
                <a href="{{ path('admin_import_massive') }}" class="action-btn primary" style="background: linear-gradient(135deg, #66bb6a, #43a047); border-color: #66bb6a;">
                    <span>🏭</span>
                    <span>Données MASSIVES</span>
                </a>
                <div style="margin-top: 1rem; font-size: 0.85rem; color: var(--text-muted);">
                    💡 Vous pouvez ajouter des œuvres de l'API MangaDx et modifier leurs données localement.
                </div>
            </div>

            <div class="action-card">
                <h3>👥 Gestion des Auteurs</h3>
                <a href="{{ path('admin_auteurs') }}" class="action-btn">
                    <span>👥</span>
                    <span>Voir tous les auteurs</span>
                </a>
                <a href="{{ path('admin_auteur_new') }}" class="action-btn">
                    <span>➕</span>
                    <span>Ajouter un auteur</span>
                </a>
                <div style="margin-top: 1rem; font-size: 0.85rem; color: var(--text-muted);">
                    💡 Gérez les auteurs de vos mangas et manhwas.
                </div>
            </div>

            <div class="action-card">
                <h3>🏠 Navigation</h3>
                <a href="{{ path('mangadx_home') }}" class="action-btn">
                    <span>🌐</span>
                    <span>API MangaDx</span>
                </a>
                <a href="{{ path('app_home') }}" class="action-btn">
                    <span>📚</span>
                    <span>Ma Collection</span>
                </a>
            </div>
        </div>

        <!-- Éléments récents -->
        <div class="recent-section">
            <div class="recent-card">
                <h3>📚 Œuvres récentes</h3>
                {% if recent_oeuvres %}
                    {% for oeuvre in recent_oeuvres %}
                        <div class="recent-item">
                            <div class="recent-item-info">
                                <div class="recent-item-title">{{ oeuvre.titre }}</div>
                                <div class="recent-item-meta">
                                    {{ oeuvre.type }} • {{ oeuvre.chapitres|length }} chapitre(s)
                                </div>
                                <div class="recent-item-date">
                                    Modifié le {{ oeuvre.updatedAt|date('d/m/Y H:i') }}
                                </div>
                            </div>
                            <a href="{{ path('admin_oeuvre_edit', {id: oeuvre.id}) }}" class="action-btn">
                                ✏️ Éditer
                            </a>
                        </div>
                    {% endfor %}
                {% else %}
                    <p style="color: var(--text-secondary); text-align: center; padding: 2rem;">
                        Aucune œuvre trouvée
                    </p>
                {% endif %}
            </div>

            <div class="recent-card">
                <h3>📖 Chapitres récents</h3>
                {% if recent_chapitres %}
                    {% for chapitre in recent_chapitres %}
                        <div class="recent-item">
                            <div class="recent-item-info">
                                <div class="recent-item-title">{{ chapitre.titre }}</div>
                                <div class="recent-item-meta">
                                    {{ chapitre.oeuvre.titre }} • Ch. {{ chapitre.ordre }}
                                </div>
                                <div class="recent-item-date">
                                    Créé le {{ chapitre.createdAt|date('d/m/Y H:i') }}
                                </div>
                            </div>
                            <a href="{{ path('admin_chapitre_edit', {id: chapitre.id}) }}" class="action-btn">
                                ✏️ Éditer
                            </a>
                        </div>
                    {% endfor %}
                {% else %}
                    <p style="color: var(--text-secondary); text-align: center; padding: 2rem;">
                        Aucun chapitre trouvé
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %} 