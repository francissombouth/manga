{% extends 'base.html.twig' %}

{% block title %}Administration - MangaThèque{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/pages/admin.css') }}">
{% endblock %}

{% block body %}


    <div class="admin-container dashboard">
    <div class="container">
        <div class="admin-header">
            <h1 class="admin-title">⚙️ Administration</h1>
                            <p class="admin-subtitle">Gestion des œuvres et chapitres depuis l'API MangaDx</p>
        </div>

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <!-- Statistiques -->
        <div class="stats-grid">
            <div class="stat-card">
                <span class="stat-icon">📚</span>
                <div class="stat-number">{{ stats.total_oeuvres }}</div>
                <div class="stat-label">Œuvres</div>
            </div>
            <div class="stat-card">
                <span class="stat-icon">📖</span>
                <div class="stat-number">{{ stats.total_chapitres }}</div>
                <div class="stat-label">Chapitres</div>
            </div>
            <div class="stat-card">
                <span class="stat-icon">✍️</span>
                <div class="stat-number">{{ stats.total_auteurs }}</div>
                <div class="stat-label">Auteurs</div>
            </div>
            <div class="stat-card">
                <span class="stat-icon">🎭</span>
                <div class="stat-number">{{ stats.total_tags }}</div>
                <div class="stat-label">Genres</div>
            </div>
        </div>

        <!-- Actions rapides -->
        <div class="admin-actions">
            <div class="action-card">
                <h3>📚 Gestion des Œuvres MangaDx</h3>
                <a href="{{ path('admin_oeuvres') }}" class="action-btn">
                    <span>📋</span>
                    <span>Voir toutes les œuvres</span>
                </a>
                <a href="{{ path('admin_oeuvre_new') }}" class="action-btn">
                    <span>➕</span>
                    <span>Ajouter une œuvre MangaDx</span>
                </a>
                <a href="{{ path('admin_import_mangadx') }}" class="action-btn" style="background: linear-gradient(135deg, #3b82f6, #1d4ed8); border-color: #3b82f6; color: white;">
                    <span>📥</span>
                    <span>Import depuis MangaDx API</span>
                </a>
                <a href="{{ path('admin_import_massive') }}" class="action-btn primary" style="background: linear-gradient(135deg, #10b981, #059669); border-color: #10b981;">
                    <span>🏭</span>
                    <span>Génération de Données Massives</span>
                </a>
                <div style="margin-top: 1rem; font-size: 0.85rem; color: var(--text-muted);">
                    💡 <strong>Import MangaDx:</strong> Importez des mangas spécifiques depuis l'API MangaDx avec leur ID.<br>
                    🏭 <strong>Génération Massive:</strong> Créez un grand nombre d'œuvres fictives pour tester l'application.
                </div>
            </div>

            <div class="action-card">
                <h3>🖼️ Gestion des Images</h3>
                <a href="{{ path('admin_image_upload') }}" class="action-btn" style="background: linear-gradient(135deg, #f59e0b, #d97706); border-color: #f59e0b; color: white;">
                    <span>☁️</span>
                    <span>Upload d'Images via ImgBB</span>
                </a>
                <div style="margin-top: 1rem; font-size: 0.85rem; color: var(--text-muted);">
                    💡 <strong>ImgBB:</strong> Uploadez des images (couvertures, pages) et obtenez des URLs permanentes pour vos œuvres.
                </div>
            </div>

            <div class="action-card">
                <h3>👥 Gestion des Auteurs</h3>
                <a href="{{ path('admin_auteurs') }}" class="action-btn">
                    <span>👥</span>
                    <span>Voir tous les auteurs</span>
                </a>
                <a href="{{ path('admin_auteur_new') }}" class="action-btn">
                    <span>➕</span>
                    <span>Ajouter un auteur</span>
                </a>
                <div style="margin-top: 1rem; font-size: 0.85rem; color: var(--text-muted);">
                    💡 Gérez les auteurs de vos mangas et manhwas.
                </div>
            </div>

            <div class="action-card">
                <h3>🎭 Gestion des Genres</h3>
                <a href="{{ path('admin_tags') }}" class="action-btn">
                    <span>🎭</span>
                    <span>Voir tous les genres</span>
                </a>
                <a href="{{ path('admin_tag_new') }}" class="action-btn">
                    <span>➕</span>
                    <span>Ajouter un genre</span>
                </a>
                <a href="{{ path('app_sync_tags') }}" class="action-btn" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed); border-color: #8b5cf6; color: white;">
                    <span>🔄</span>
                    <span>Synchroniser avec MangaDex</span>
                </a>
                <div style="margin-top: 1rem; font-size: 0.85rem; color: var(--text-muted);">
                    💡 Gérez les genres de vos mangas. Synchronisez avec MangaDex pour récupérer les genres officiels.
                </div>
            </div>

            <div class="action-card">
                <h3>🔐 Gestion des Utilisateurs</h3>
                <a href="{{ path('admin_users') }}" class="action-btn">
                    <span>👨‍👩‍👧‍👦</span>
                    <span>Voir tous les utilisateurs</span>
                </a>
                <a href="{{ path('app_register') }}" class="action-btn">
                    <span>➕</span>
                    <span>Créer un compte admin</span>
                </a>
                <div style="margin-top: 1rem; font-size: 0.85rem; color: var(--text-muted);">
                    💡 Gérez les comptes utilisateurs et leurs rôles d'accès.
                </div>
            </div>

        </div>

        <!-- Éléments récents -->
        <div class="recent-section">
            <div class="recent-card">
                <h3>📚 Œuvres récentes</h3>
                {% if recent_oeuvres %}
                    {% for oeuvre in recent_oeuvres %}
                        <div class="recent-item">
                            <div class="recent-item-info">
                                <div class="recent-item-title">{{ oeuvre.titre }}</div>
                                <div class="recent-item-meta">
                                    {{ oeuvre.type }} • {{ oeuvre.chapitres|length }} chapitre(s)
                                </div>
                                <div class="recent-item-date">
                                    Modifié le {{ oeuvre.updatedAt|date('d/m/Y H:i') }}
                                </div>
                            </div>
                            <a href="{{ path('admin_oeuvre_edit', {id: oeuvre.id}) }}" class="action-btn">
                                ✏️ Éditer
                            </a>
                        </div>
                    {% endfor %}
                {% else %}
                    <p style="color: var(--text-secondary); text-align: center; padding: 2rem;">
                        Aucune œuvre trouvée
                    </p>
                {% endif %}
            </div>

            <div class="recent-card">
                <h3>📖 Chapitres récents</h3>
                {% if recent_chapitres %}
                    {% for chapitre in recent_chapitres %}
                        <div class="recent-item">
                            <div class="recent-item-info">
                                <div class="recent-item-title">{{ chapitre.titre }}</div>
                                <div class="recent-item-meta">
                                    {{ chapitre.oeuvre.titre }} • Ch. {{ chapitre.ordre }}
                                </div>
                                <div class="recent-item-date">
                                    Créé le {{ chapitre.createdAt|date('d/m/Y H:i') }}
                                </div>
                            </div>
                            <a href="{{ path('admin_chapitre_edit', {id: chapitre.id}) }}" class="action-btn">
                                ✏️ Éditer
                            </a>
                        </div>
                    {% endfor %}
                {% else %}
                    <p style="color: var(--text-secondary); text-align: center; padding: 2rem;">
                        Aucun chapitre trouvé
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %} 