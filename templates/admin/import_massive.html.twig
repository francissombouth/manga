    padding: 0;
    margin: 0;
}

.feature-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: var(--bg-card);
    border-radius: 10px;
    transition: all 0.3s ease;
}

.feature-item:hover {
    background: rgba(16, 185, 129, 0.05);
}

.feature-icon {
    background: var(--accent-primary);
    color: white;
    width: 35px;
    height: 35px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    flex-shrink: 0;
}

.feature-content h6 {
    color: var(--text-primary);
    font-weight: 600;
    margin: 0 0 0.3rem 0;
}

.feature-content small {
    color: var(--text-secondary);
    line-height: 1.4;
}

.stats-card {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
}

.stats-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
}

.stat-item {
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
}

.stat-item h4 {
    font-size: 1.8rem;
    font-weight: 800;
    margin: 0 0 0.3rem 0;
}

.stat-item small {
    opacity: 0.9;
    font-size: 0.9rem;
}

.use-cases-card {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(29, 78, 216, 0.1));
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 12px;
    padding: 1.5rem;
}

.use-cases-title {
    color: #3b82f6;
    font-weight: 600;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.use-cases-list {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 0;
    padding-left: 1.2rem;
}

.use-cases-list li {
    margin-bottom: 0.5rem;
}

.use-cases-list strong {
    color: var(--text-primary);
}

.alert {
    padding: 1rem 1.5rem;
    border-radius: 12px;
    margin-bottom: 1.5rem;
    border: 1px solid;
}

.alert-success {
    background: rgba(16, 185, 129, 0.1);
    border-color: rgba(16, 185, 129, 0.3);
    color: #10b981;
}

.alert-danger {
    background: rgba(239, 68, 68, 0.1);
    border-color: rgba(239, 68, 68, 0.3);
    color: #ef4444;
}

.alert-info {
    background: rgba(59, 130, 246, 0.1);
    border-color: rgba(59, 130, 246, 0.3);
    color: #3b82f6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

@media (max-width: 768px) {
    .content-grid {
        grid-template-columns: 1fr;
    }
    
    .form-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .button-grid {
        grid-template-columns: 1fr;
    }
    
    .admin-header {
        padding: 1.5rem;
    }
    
    .back-btn {
        position: static;
        margin-bottom: 1rem;
        display: inline-block;
    }
    
    .admin-title {
        font-size: 2rem;
    }
}
</style>
{% endblock %}

