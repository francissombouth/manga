{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs - Administration{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/pages/admin.css') }}">
{% endblock %}

{% block body %}
<div class="admin-container">
    <div class="container">
        <div class="admin-header">
            <h1 class="admin-title">ğŸ‘¥ Gestion des Utilisateurs</h1>
            <p style="color: var(--text-secondary); margin: 0;">{{ total }} utilisateur(s) au total</p>
        </div>

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <!-- Statistiques -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number">{{ total }}</div>
                <div class="stat-label">Utilisateurs Total</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">
                    {% set adminCount = 0 %}
                    {% for user in users %}
                        {% if user.isAdmin %}
                            {% set adminCount = adminCount + 1 %}
                        {% endif %}
                    {% endfor %}
                    {{ adminCount }}
                </div>
                <div class="stat-label">Administrateurs</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ total - adminCount }}</div>
                <div class="stat-label">Utilisateurs Standards</div>
            </div>
        </div>

        <!-- ContrÃ´les -->
        <div class="admin-controls">
            <div>
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
                    â¬…ï¸ Retour au dashboard
                </a>
            </div>
            
            <form method="GET" class="search-form">
                <input type="text" name="search" value="{{ search }}" placeholder="Rechercher un utilisateur..." class="search-input">
                <button type="submit" class="btn btn-secondary">ğŸ” Rechercher</button>
                {% if search %}
                    <a href="{{ path('admin_users') }}" class="btn btn-secondary">âŒ Effacer</a>
                {% endif %}
            </form>
        </div>

        <!-- Table des utilisateurs -->
        {% if users %}
            <div class="users-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Utilisateur</th>
                            <th>Email</th>
                            <th>RÃ´les</th>
                            <th>Date d'inscription</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>
                                    <div class="user-name">{{ user.nom }}</div>
                                </td>
                                <td>
                                    <div class="user-email">{{ user.email }}</div>
                                </td>
                                <td>
                                    {% if user.isAdmin %}
                                        <span class="role-badge role-admin">ğŸ‘‘ Administrateur</span>
                                    {% else %}
                                        <span class="role-badge role-user">ğŸ‘¤ Utilisateur</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ user.createdAt|date('d/m/Y H:i') }}
                                </td>
                                <td class="actions-cell">
                                    <a href="{{ path('admin_user_edit_roles', {id: user.id}) }}" class="btn btn-secondary btn-sm">
                                        âš™ï¸ GÃ©rer les rÃ´les
                                    </a>
                                    
                                    {% if user.isAdmin %}
                                        <form method="POST" action="{{ path('admin_user_toggle_admin', {id: user.id}) }}" style="display: inline;" onsubmit="return confirm('Retirer les droits admin Ã  {{ user.nom }} ?')">
                                            <button type="submit" class="btn btn-warning btn-sm">
                                                â– Retirer Admin
                                            </button>
                                        </form>
                                    {% else %}
                                        <form method="POST" action="{{ path('admin_user_toggle_admin', {id: user.id}) }}" style="display: inline;" onsubmit="return confirm('Donner les droits admin Ã  {{ user.nom }} ?')">
                                            <button type="submit" class="btn btn-success btn-sm">
                                                â• Promouvoir Admin
                                            </button>
                                        </form>
                                    {% endif %}

                                    {% if user != app.user %}
                                        <form method="POST" action="{{ path('admin_user_delete', {id: user.id}) }}" style="display: inline;" onsubmit="return confirm('Supprimer dÃ©finitivement {{ user.nom }} ?')">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                ğŸ—‘ï¸ Supprimer
                                            </button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="empty-state">
                <div style="font-size: 4rem; margin-bottom: 1rem;">ğŸ‘¥</div>
                <h3>Aucun utilisateur trouvÃ©</h3>
                <p>
                    {% if search %}
                        Aucun utilisateur ne correspond Ã  votre recherche "{{ search }}".
                    {% else %}
                        Il n'y a encore aucun utilisateur.
                    {% endif %}
                </p>
            </div>
        {% endif %}

        <!-- Pagination -->
        {% if total_pages > 1 %}
            <div class="pagination">
                {% if current_page > 1 %}
                    <a href="{{ path('admin_users', {page: current_page - 1, search: search}) }}" class="pagination-btn">
                        â¬…ï¸ PrÃ©cÃ©dent
                    </a>
                {% endif %}

                <div class="pagination-info">
                    Page {{ current_page }} sur {{ total_pages }}
                </div>

                {% if current_page < total_pages %}
                    <a href="{{ path('admin_users', {page: current_page + 1, search: search}) }}" class="pagination-btn">
                        Suivant â¡ï¸
                    </a>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %} 