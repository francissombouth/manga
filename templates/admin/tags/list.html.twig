{% extends 'base.html.twig' %}

{% block title %}{{ title }} - Administration{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/pages/admin.css') }}">
{% endblock %}

{% block body %}
<div class="admin-container">
    <div class="container">
        <!-- Breadcrumb -->
        <div class="breadcrumb">
            <a href="{{ path('admin_dashboard') }}">Administration</a>
            <span>></span>
            <span>{{ title }}</span>
        </div>

        <div class="admin-header">
            <h1 class="admin-title">üé≠ {{ title }}</h1>
        </div>

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <!-- Contr√¥les -->
        <div class="admin-controls">
            <div>
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
                    ‚¨ÖÔ∏è Retour au dashboard
                </a>
            </div>
            
            <a href="{{ path('admin_tag_new') }}" class="btn btn-primary">
                ‚ûï Ajouter un genre
            </a>
        </div>

        <!-- Contenu -->
        <div class="content-card">
            {% if tags %}
                <div class="table-container">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>ID MangaDex</th>
                                <th>≈íuvres associ√©es</th>
                                <th>Date de cr√©ation</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for tag in tags %}
                                <tr>
                                    <td>
                                        <strong>{{ tag.nom }}</strong>
                                    </td>
                                    <td>
                                        {% if tag.mangadxId %}
                                            <code style="background: var(--bg-card); padding: 0.2rem 0.4rem; border-radius: 4px; font-size: 0.8rem;">
                                                {{ tag.mangadxId }}
                                            </code>
                                        {% else %}
                                            <span style="color: var(--text-muted); font-style: italic;">Non d√©fini</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="tag-count">{{ tag.oeuvres|length }} ≈ìuvre(s)</span>
                                    </td>
                                    <td>
                                        {{ tag.createdAt|date('d/m/Y H:i') }}
                                    </td>
                                    <td>
                                        <div style="display: flex; gap: 0.5rem;">
                                            <a href="{{ path('admin_tag_edit', {id: tag.id}) }}" class="btn btn-secondary btn-sm">
                                                ‚úèÔ∏è √âditer
                                            </a>
                                            {% if tag.oeuvres|length == 0 %}
                                                <form method="post" action="{{ path('admin_tag_delete', {id: tag.id}) }}" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce genre ?')">
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        üóëÔ∏è Supprimer
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="empty-state">
                    <div class="icon">üé≠</div>
                    <h3>Aucun genre trouv√©</h3>
                    <p>Commencez par ajouter des genres ou synchronisez avec MangaDex.</p>
                    <a href="{{ path('admin_tag_new') }}" class="btn btn-primary" style="margin-top: 1rem;">
                        ‚ûï Ajouter le premier genre
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %} 