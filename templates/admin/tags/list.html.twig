{% extends 'base.html.twig' %}

{% block title %}{{ title }} - Administration{% endblock %}

{% block stylesheets %}
<style>
.admin-container {
    min-height: 100vh;
    background: var(--bg-primary);
    padding: 2rem 0;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.admin-header {
    background: var(--gradient-card);
    border: 1px solid var(--border-secondary);
    border-radius: 20px;
    padding: 2rem;
    margin-bottom: 2rem;
    text-align: center;
}

.admin-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.content-card {
    background: var(--gradient-card);
    border: 1px solid var(--border-secondary);
    border-radius: 20px;
    padding: 2rem;
}

.table-container {
    overflow-x: auto;
}

.admin-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
}

.admin-table th,
.admin-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid var(--border-secondary);
}

.admin-table th {
    background: var(--bg-card);
    font-weight: 600;
    color: var(--text-primary);
}

.admin-table tr:hover {
    background: var(--bg-card);
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 0.9rem;
}

.btn-primary {
    background: var(--gradient-primary);
    color: white;
}

.btn-secondary {
    background: var(--bg-card);
    color: var(--text-primary);
    border: 1px solid var(--border-secondary);
}

.btn-danger {
    background: linear-gradient(135deg, #ef4444, #dc2626);
    color: white;
}

.btn:hover {
    transform: translateY(-1px);
    text-decoration: none;
}

.actions-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.alert {
    padding: 1rem;
    border-radius: 10px;
    margin-bottom: 1rem;
}

.alert-success {
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.3);
    color: #6ee7b7;
}

.alert-error {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #fca5a5;
}

.breadcrumb {
    margin-bottom: 2rem;
}

.breadcrumb a {
    color: var(--accent-primary);
    text-decoration: none;
}

.breadcrumb a:hover {
    text-decoration: underline;
}

.breadcrumb span {
    color: var(--text-muted);
    margin: 0 0.5rem;
}

.tag-count {
    background: var(--accent-primary);
    color: white;
    padding: 0.2rem 0.5rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 600;
}

.empty-state {
    text-align: center;
    padding: 3rem;
    color: var(--text-secondary);
}

.empty-state .icon {
    font-size: 4rem;
    margin-bottom: 1rem;
}
</style>
{% endblock %}

{% block body %}
<div class="admin-container">
    <div class="container">
        <!-- Breadcrumb -->
        <div class="breadcrumb">
            <a href="{{ path('admin_dashboard') }}">Administration</a>
            <span>></span>
            <span>{{ title }}</span>
        </div>

        <div class="admin-header">
            <h1 class="admin-title">üé≠ {{ title }}</h1>
        </div>

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <div class="content-card">
            <div class="actions-header">
                <h2>Liste des Genres</h2>
                <a href="{{ path('admin_tag_new') }}" class="btn btn-primary">
                    <span>‚ûï</span>
                    <span>Ajouter un genre</span>
                </a>
            </div>

            {% if tags %}
                <div class="table-container">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>ID MangaDex</th>
                                <th>≈íuvres associ√©es</th>
                                <th>Date de cr√©ation</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for tag in tags %}
                                <tr>
                                    <td>
                                        <strong>{{ tag.nom }}</strong>
                                    </td>
                                    <td>
                                        {% if tag.mangadxId %}
                                            <code style="background: var(--bg-card); padding: 0.2rem 0.4rem; border-radius: 4px; font-size: 0.8rem;">
                                                {{ tag.mangadxId }}
                                            </code>
                                        {% else %}
                                            <span style="color: var(--text-muted); font-style: italic;">Non d√©fini</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="tag-count">{{ tag.oeuvres|length }} ≈ìuvre(s)</span>
                                    </td>
                                    <td>
                                        {{ tag.createdAt|date('d/m/Y H:i') }}
                                    </td>
                                    <td>
                                        <div style="display: flex; gap: 0.5rem;">
                                            <a href="{{ path('admin_tag_edit', {id: tag.id}) }}" class="btn btn-secondary">
                                                <span>‚úèÔ∏è</span>
                                                <span>√âditer</span>
                                            </a>
                                            {% if tag.oeuvres|length == 0 %}
                                                <form method="post" action="{{ path('admin_tag_delete', {id: tag.id}) }}" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce genre ?')">
                                                    <button type="submit" class="btn btn-danger">
                                                        <span>üóëÔ∏è</span>
                                                        <span>Supprimer</span>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="empty-state">
                    <div class="icon">üé≠</div>
                    <h3>Aucun genre trouv√©</h3>
                    <p>Commencez par ajouter des genres ou synchronisez avec MangaDex.</p>
                    <a href="{{ path('admin_tag_new') }}" class="btn btn-primary" style="margin-top: 1rem;">
                        <span>‚ûï</span>
                        <span>Ajouter le premier genre</span>
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %} 