{% extends 'base.html.twig' %}

{% block title %}Gestion des ≈íuvres - Administration{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/pages/admin.css') }}">
{% endblock %}

{% block body %}
<div class="admin-container">
    <div class="container">
        <div class="admin-header">
            <h1 class="admin-title">üìö Gestion des ≈íuvres</h1>
            <p style="color: var(--text-secondary); margin: 0;">{{ total }} ≈ìuvre(s) au total</p>
        </div>

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <!-- Contr√¥les -->
        <div class="admin-controls">
            <form method="GET" class="search-form">
                <input type="text" name="search" value="{{ search }}" placeholder="Rechercher une ≈ìuvre..." class="search-input">
                <button type="submit" class="btn btn-primary">üîç Rechercher</button>
                {% if search %}
                    <a href="{{ path('admin_oeuvres') }}" class="btn btn-secondary">‚ùå Effacer</a>
                {% endif %}
            </form>
            
            <div class="admin-actions">
                <a href="{{ path('admin_oeuvres_new') }}" class="btn btn-primary">
                    ‚ú® Nouvelle ≈ìuvre
                </a>
                <a href="{{ path('admin_import_massive') }}" class="btn btn-accent">
                    üè≠ Import Massif
                </a>
                <a href="{{ path('admin_import_mangadx') }}" class="btn btn-purple">
                    üì• Import MangaDx
                </a>
            </div>
        </div>

        <!-- Tableau des ≈ìuvres -->
        <div class="admin-table">
            <div class="table-header">
                <h2 class="table-title">Liste des ≈íuvres</h2>
                <div class="table-actions">
                    <span>{{ oeuvres|length }} r√©sultat(s)</span>
                </div>
            </div>
            
            <div class="table-content">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Couverture</th>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Statut</th>
                            <th>Chapitres</th>
                            <th>Date cr√©ation</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for oeuvre in oeuvres %}
                        <tr>
                            <td>{{ oeuvre.id }}</td>
                            <td>
                                {% if oeuvre.couverture %}
                                    <img src="{{ smart_image_url(oeuvre.couverture) }}" 
                                         alt="{{ oeuvre.titre }}" 
                                         style="width: 40px; height: 60px; object-fit: cover; border-radius: 4px;"
                                         loading="lazy"
                                         onerror="this.style.display='none';">
                                {% else %}
                                    <div style="width: 40px; height: 60px; background: var(--surface); border-radius: 4px; display: flex; align-items: center; justify-content: center; color: var(--text-secondary);">üìñ</div>
                                {% endif %}
                            </td>
                            <td>
                                <strong>{{ oeuvre.titre }}</strong>
                                {% if oeuvre.mangadxId %}
                                    <div style="font-size: 0.8rem; color: var(--text-secondary);">
                                        MangaDx: {{ oeuvre.mangadxId|slice(0, 8) }}...
                                    </div>
                                {% endif %}
                            </td>
                            <td>{{ oeuvre.auteur ? oeuvre.auteur.nom : 'Aucun auteur' }}</td>
                            <td>
                                <span class="status-badge status-{{ oeuvre.statut|lower }}">
                                    {{ oeuvre.statut }}
                                </span>
                            </td>
                            <td>{{ oeuvre.chapitres|length }}</td>
                            <td>{{ oeuvre.createdAt|date('d/m/Y') }}</td>
                            <td class="table-actions-cell">
                                <a href="{{ path('app_oeuvre_show', {'id': oeuvre.id}) }}" 
                                   class="btn-table btn-table-view" 
                                   title="Voir l'≈ìuvre">
                                    üëÅÔ∏è
                                </a>
                                <a href="{{ path('admin_oeuvres_edit', {'id': oeuvre.id}) }}" 
                                   class="btn-table btn-table-edit" 
                                   title="Modifier">
                                    ‚úèÔ∏è
                                </a>
                                <a href="{{ path('admin_chapitres_list', {'oeuvre': oeuvre.id}) }}" 
                                   class="btn-table btn-table-view" 
                                   title="G√©rer les chapitres">
                                    üìö
                                </a>
                                <form method="post" 
                                      action="{{ path('admin_oeuvres_delete', {'id': oeuvre.id}) }}" 
                                      style="display: inline;"
                                      onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette ≈ìuvre ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ oeuvre.id) }}">
                                    <button type="submit" class="btn-table btn-table-delete" title="Supprimer">üóëÔ∏è</button>
                                </form>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="8" style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                                {% if search %}
                                    Aucune ≈ìuvre trouv√©e pour "{{ search }}"
                                {% else %}
                                    Aucune ≈ìuvre trouv√©e. <a href="{{ path('admin_oeuvres_new') }}">Cr√©er la premi√®re ≈ìuvre</a>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        {% if total > 20 %}
            <div class="pagination-wrapper">
                <div class="pagination">
                    {% for page in 1..(total / 20)|round(0, 'ceil') %}
                        {% set currentPage = (app.request.get('page', 1))|int %}
                        <a href="{{ path('admin_oeuvres', {page: page, search: search}) }}" 
                           class="pagination-link {% if page == currentPage %}active{% endif %}">
                            {{ page }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
