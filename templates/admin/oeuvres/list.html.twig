{% extends 'base.html.twig' %}

{% block title %}Gestion des ≈íuvres - Administration{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/pages/admin.css') }}">
{% endblock %}

{% block body %}


<div class="admin-container">
    <div class="container">
        <div class="admin-header">
            <h1 class="admin-title">üìö Gestion des ≈íuvres</h1>
            <p style="color: var(--text-secondary); margin: 0;">{{ total }} ≈ìuvre(s) au total</p>
        </div>

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <!-- Contr√¥les -->
        <div class="admin-controls">
            <form method="GET" class="search-form">
                <input type="text" name="search" value="{{ search }}" placeholder="Rechercher une ≈ìuvre..." class="search-input">
                <button type="submit" class="btn btn-secondary">üîç Rechercher</button>
                {% if search %}
                    <a href="{{ path('admin_oeuvres') }}" class="btn btn-secondary">‚ùå Effacer</a>
                {% endif %}
            </form>
            
            <div>
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
                    ‚¨ÖÔ∏è Retour au dashboard
                </a>
                <a href="{{ path('admin_oeuvre_new') }}" class="btn btn-primary">
                    ‚ûï Ajouter une ≈ìuvre MangaDx
                </a>
            </div>
        </div>

        <!-- Table des ≈ìuvres -->
        {% if oeuvres %}
            <div class="oeuvres-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Type</th>
                            <th>ID MangaDx</th>
                            <th>Chapitres</th>
                            <th>Derni√®re modification</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for oeuvre in oeuvres %}
                            <tr>
                                <td>
                                    <div class="oeuvre-title">{{ oeuvre.titre }}</div>
                                </td>
                                <td>
                                    {% if oeuvre.auteur %}
                                        {{ oeuvre.auteur.nom }}
                                        {% if oeuvre.auteur.prenom %} {{ oeuvre.auteur.prenom }}{% endif %}
                                    {% else %}
                                        <em>Aucun auteur</em>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="type-badge">{{ oeuvre.type }}</span>
                                </td>
                                <td>
                                    {% if oeuvre.mangadxId %}
                                        <code style="font-size: 0.8rem; background: var(--bg-card); padding: 0.2rem 0.5rem; border-radius: 4px;">
                                            {{ oeuvre.mangadxId|slice(0, 8) }}...
                                        </code>
                                    {% else %}
                                        <em style="color: var(--text-muted);">Aucun ID</em>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ oeuvre.chapitres|length }} chapitre(s)
                                </td>
                                <td>
                                    {{ oeuvre.updatedAt|date('d/m/Y H:i') }}
                                </td>
                                <td class="actions-cell">
                                    <a href="{{ path('app_oeuvre_show', {id: oeuvre.id}) }}" class="btn btn-secondary btn-sm">
                                        üìñ Voir l'≈ìuvre
                                    </a>
                                    <a href="{{ path('admin_oeuvre_edit', {id: oeuvre.id}) }}" class="btn btn-secondary btn-sm">
                                        ‚úèÔ∏è √âditer
                                    </a>
                                    <form method="POST" action="{{ path('admin_oeuvre_delete', {id: oeuvre.id}) }}" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette ≈ìuvre ?')">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            üóëÔ∏è Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if total_pages > 1 %}
                <div class="pagination">
                    {% if current_page > 1 %}
                        <a href="{{ path('admin_oeuvres', {page: current_page - 1, search: search}) }}" class="pagination-btn">
                            ‚Üê Pr√©c√©dent
                        </a>
                    {% else %}
                        <span class="pagination-btn disabled">‚Üê Pr√©c√©dent</span>
                    {% endif %}

                    <span class="pagination-info">
                        Page {{ current_page }} sur {{ total_pages }}
                    </span>

                    {% if current_page < total_pages %}
                        <a href="{{ path('admin_oeuvres', {page: current_page + 1, search: search}) }}" class="pagination-btn">
                            Suivant ‚Üí
                        </a>
                    {% else %}
                        <span class="pagination-btn disabled">Suivant ‚Üí</span>
                    {% endif %}
                </div>
            {% endif %}
        {% else %}
            <div class="oeuvres-table">
                <div class="empty-state">
                    <h3>{% if search %}Aucun r√©sultat{% else %}Aucune ≈ìuvre{% endif %}</h3>
                    <p>
                        {% if search %}
                            Aucune ≈ìuvre ne correspond √† votre recherche "{{ search }}".
                        {% else %}
                            Commencez par ajouter votre premi√®re ≈ìuvre MangaDx !
                        {% endif %}
                    </p>
                    {% if not search %}
                        <a href="{{ path('admin_oeuvre_new') }}" class="btn btn-primary" style="margin-top: 1rem;">
                            ‚ûï Ajouter la premi√®re ≈ìuvre MangaDx
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %} 