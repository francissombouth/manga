{% extends 'base.html.twig' %}

{% block title %}Gestion des ≈íuvres - Administration{% endblock %}

{% block stylesheets %}
<style>
.admin-container {
    min-height: 100vh;
    background: var(--bg-primary);
    padding: 2rem 0;
}

.admin-header {
    background: var(--gradient-card);
    border: 1px solid var(--border-secondary);
    border-radius: 20px;
    padding: 2rem;
    margin-bottom: 2rem;
}

.admin-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.admin-controls {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 2rem;
}

.search-form {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex: 1;
    max-width: 500px;
}

.search-input {
    flex: 1;
    padding: 0.8rem 1rem;
    background: var(--bg-card);
    border: 2px solid var(--border-secondary);
    border-radius: 10px;
    color: var(--text-primary);
    font-size: 1rem;
}

.search-input:focus {
    outline: none;
    border-color: var(--accent-primary);
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.2rem;
    border-radius: 10px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.btn-primary {
    background: var(--gradient-primary);
    color: white;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
    text-decoration: none;
    color: white;
}

.btn-secondary {
    background: var(--bg-card);
    color: var(--text-primary);
    border: 2px solid var(--border-secondary);
}

.btn-secondary:hover {
    background: var(--accent-primary);
    color: white;
    text-decoration: none;
}

.btn-danger {
    background: rgba(239, 68, 68, 0.1);
    color: #fca5a5;
    border: 2px solid rgba(239, 68, 68, 0.3);
}

.btn-danger:hover {
    background: #ef4444;
    color: white;
}

.oeuvres-table {
    background: var(--gradient-card);
    border: 1px solid var(--border-secondary);
    border-radius: 20px;
    overflow-x: auto;
    overflow-y: hidden;
    margin-bottom: 2rem;
}

.table {
    width: 100%;
    min-width: 1200px;
    border-collapse: collapse;
}

.table th {
    background: var(--bg-card);
    color: var(--text-primary);
    font-weight: 700;
    padding: 1.2rem;
    text-align: left;
    border-bottom: 1px solid var(--border-secondary);
}

.table td {
    padding: 1.2rem;
    border-bottom: 1px solid var(--border-secondary);
    color: var(--text-secondary);
    vertical-align: middle;
}

.table tr:hover {
    background: rgba(99, 102, 241, 0.05);
}

.oeuvre-title {
    color: var(--text-primary);
    font-weight: 600;
    font-size: 1.1rem;
}

.oeuvre-meta {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-top: 0.2rem;
}

.type-badge {
    display: inline-block;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    background: rgba(99, 102, 241, 0.1);
    color: var(--accent-primary);
    border: 1px solid rgba(99, 102, 241, 0.3);
}

.actions-cell {
    white-space: nowrap;
    min-width: 320px;
    width: 320px;
}

.btn-sm {
    padding: 0.5rem 0.8rem;
    font-size: 0.85rem;
    margin-right: 0.5rem;
    margin-bottom: 0.5rem;
    display: inline-block;
}

.actions-cell .btn-sm:last-child {
    margin-right: 0;
}

.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
}

.pagination-btn {
    padding: 0.8rem 1.2rem;
    background: var(--bg-card);
    color: var(--text-primary);
    border: 2px solid var(--border-secondary);
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
}

.pagination-btn:hover {
    background: var(--accent-primary);
    color: white;
    text-decoration: none;
}

.pagination-btn.disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.pagination-info {
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
}

.empty-state h3 {
    color: var(--text-primary);
    margin-bottom: 1rem;
}

.source-tabs {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    background: var(--bg-card);
    padding: 0.5rem;
    border-radius: 15px;
    border: 1px solid var(--border-secondary);
}

.tab-btn {
    flex: 1;
    padding: 1rem 2rem;
    border: none;
    background: transparent;
    color: var(--text-secondary);
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.tab-btn.active {
    background: var(--gradient-primary);
    color: white;
    box-shadow: var(--shadow-secondary);
}

.tab-btn:hover:not(.active) {
    background: rgba(99, 102, 241, 0.1);
    color: var(--accent-primary);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.alert {
    padding: 1rem;
    border-radius: 10px;
    margin-bottom: 1rem;
}

.alert-success {
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.3);
    color: #6ee7b7;
}

@media (max-width: 768px) {
    .admin-controls {
        flex-direction: column;
        align-items: stretch;
    }
    
    .table {
        font-size: 0.9rem;
        min-width: 900px;
    }
    
    .table th, .table td {
        padding: 0.8rem 0.5rem;
    }
    
    .btn-sm {
        padding: 0.4rem 0.6rem;
        font-size: 0.8rem;
        margin-bottom: 0.3rem;
    }
    
    .actions-cell {
        min-width: 280px;
        width: 280px;
    }
}
</style>
{% endblock %}

{% block body %}


<div class="admin-container">
    <div class="container">
        <div class="admin-header">
            <h1 class="admin-title">üìö Gestion des ≈íuvres</h1>
            <p style="color: var(--text-secondary); margin: 0;">{{ total }} ≈ìuvre(s) au total</p>
        </div>

        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <!-- Contr√¥les -->
        <div class="admin-controls">
            <form method="GET" class="search-form">
                <input type="text" name="search" value="{{ search }}" placeholder="Rechercher une ≈ìuvre..." class="search-input">
                <button type="submit" class="btn btn-secondary">üîç Rechercher</button>
                {% if search %}
                    <a href="{{ path('admin_oeuvres') }}" class="btn btn-secondary">‚ùå Effacer</a>
                {% endif %}
            </form>
            
            <div>
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
                    ‚¨ÖÔ∏è Retour au dashboard
                </a>
                <a href="{{ path('admin_oeuvre_new') }}" class="btn btn-primary">
                    ‚ûï Ajouter une ≈ìuvre MangaDx
                </a>
            </div>
        </div>

        <!-- Table des ≈ìuvres -->
        {% if oeuvres %}
            <div class="oeuvres-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Type</th>
                            <th>ID MangaDx</th>
                            <th>Chapitres</th>
                            <th>Derni√®re modification</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for oeuvre in oeuvres %}
                            <tr>
                                <td>
                                    <div class="oeuvre-title">{{ oeuvre.titre }}</div>
                                </td>
                                <td>
                                    {% if oeuvre.auteur %}
                                        {{ oeuvre.auteur.nom }}
                                        {% if oeuvre.auteur.prenom %} {{ oeuvre.auteur.prenom }}{% endif %}
                                    {% else %}
                                        <em>Aucun auteur</em>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="type-badge">{{ oeuvre.type }}</span>
                                </td>
                                <td>
                                    {% if oeuvre.mangadxId %}
                                        <code style="font-size: 0.8rem; background: var(--bg-card); padding: 0.2rem 0.5rem; border-radius: 4px;">
                                            {{ oeuvre.mangadxId|slice(0, 8) }}...
                                        </code>
                                    {% else %}
                                        <em style="color: var(--text-muted);">Aucun ID</em>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ oeuvre.chapitres|length }} chapitre(s)
                                </td>
                                <td>
                                    {{ oeuvre.updatedAt|date('d/m/Y H:i') }}
                                </td>
                                <td class="actions-cell">
                                    <a href="{{ path('app_oeuvre_show', {id: oeuvre.id}) }}" class="btn btn-secondary btn-sm">
                                        üìñ Voir l'≈ìuvre
                                    </a>
                                    <a href="{{ path('admin_oeuvre_edit', {id: oeuvre.id}) }}" class="btn btn-secondary btn-sm">
                                        ‚úèÔ∏è √âditer
                                    </a>
                                    <form method="POST" action="{{ path('admin_oeuvre_delete', {id: oeuvre.id}) }}" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette ≈ìuvre ?')">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            üóëÔ∏è Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if total_pages > 1 %}
                <div class="pagination">
                    {% if current_page > 1 %}
                        <a href="{{ path('admin_oeuvres', {page: current_page - 1, search: search}) }}" class="pagination-btn">
                            ‚Üê Pr√©c√©dent
                        </a>
                    {% else %}
                        <span class="pagination-btn disabled">‚Üê Pr√©c√©dent</span>
                    {% endif %}

                    <span class="pagination-info">
                        Page {{ current_page }} sur {{ total_pages }}
                    </span>

                    {% if current_page < total_pages %}
                        <a href="{{ path('admin_oeuvres', {page: current_page + 1, search: search}) }}" class="pagination-btn">
                            Suivant ‚Üí
                        </a>
                    {% else %}
                        <span class="pagination-btn disabled">Suivant ‚Üí</span>
                    {% endif %}
                </div>
            {% endif %}
        {% else %}
            <div class="oeuvres-table">
                <div class="empty-state">
                    <h3>{% if search %}Aucun r√©sultat{% else %}Aucune ≈ìuvre{% endif %}</h3>
                    <p>
                        {% if search %}
                            Aucune ≈ìuvre ne correspond √† votre recherche "{{ search }}".
                        {% else %}
                            Commencez par ajouter votre premi√®re ≈ìuvre MangaDx !
                        {% endif %}
                    </p>
                    {% if not search %}
                        <a href="{{ path('admin_oeuvre_new') }}" class="btn btn-primary" style="margin-top: 1rem;">
                            ‚ûï Ajouter la premi√®re ≈ìuvre MangaDx
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %} 