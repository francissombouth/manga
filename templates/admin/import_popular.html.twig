</div>

<style>
.card {
    transition: all 0.3s ease;
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.btn {
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-1px);
}

pre code {
    font-size: 0.9em;
}

.badge {
    font-size: 0.8em;
}

.form-control:focus, .form-select:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
}

.loading {
    opacity: 0.6;
    pointer-events: none;
}
</style>

<script>
function updateEstimates() {
    const limit = parseInt(document.getElementById('limit').value);
    
    // Estimations bas√©es sur les donn√©es moyennes MangaDx
    const timePerManga = 3; // secondes
    const sizePerManga = 0.5; // MB
    const chaptersPerManga = 10; // moyenne
    
    const totalTime = Math.ceil((limit * timePerManga) / 60);
    const totalSize = Math.ceil(limit * sizePerManga);
    const totalChapters = limit * chaptersPerManga;
    
    document.getElementById('estimatedTime').textContent = `~${totalTime} minute${totalTime > 1 ? 's' : ''}`;
    document.getElementById('estimatedSize').textContent = `~${totalSize} MB`;
    document.getElementById('estimatedChapters').textContent = `~${totalChapters}`;
}

function startSimulation() {
    document.getElementById('dry_run').checked = true;
    document.getElementById('importForm').submit();
}

function startImport() {
    if (confirm('√ätes-vous s√ªr de vouloir lancer l\'import massif ? Cette op√©ration peut prendre plusieurs minutes.')) {
        document.getElementById('dry_run').checked = false;
        document.getElementById('importForm').submit();
    }
}

// Mettre √† jour les estimations au changement
document.getElementById('limit').addEventListener('change', updateEstimates);

// Initialiser les estimations
updateEstimates();
</script>
{% endblock %}

