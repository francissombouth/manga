                    </div>
                    
                    <div class="oeuvre-info">
                        <div class="oeuvre-type">
                            <span class="type-badge">{{ oeuvre.type|upper }}</span>
                        </div>
                        <div class="oeuvre-stats">
                            <span class="stat-item">
                                <i class="icon">üìñ</i>
                                {{ item.chapitres_count }} chapitre{{ item.chapitres_count > 1 ? 's' : '' }}
                            </span>
                            {% if item.latest_chapter_date %}
                            <span class="stat-item">
                                <i class="icon">üóìÔ∏è</i>
                                {{ item.latest_chapter_date|date('d/m/Y') }}
                            </span>
                            {% endif %}
                        </div>
                    </div>
                    
                    {% if oeuvre.resume %}
                    <p class="oeuvre-description">{{ oeuvre.resume|slice(0, 120) }}{% if oeuvre.resume|length > 120 %}...{% endif %}</p>
                    {% endif %}
                    
                    <div class="oeuvre-actions">
                        <a href="/oeuvres/{{ oeuvre.id }}" class="btn btn-primary">Voir le manga</a>
                        {% if item.chapitres_count > 0 %}
                        <a href="/chapitres/oeuvre/{{ oeuvre.id }}" class="btn btn-secondary">Lire</a>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}
</main>

<footer class="footer">
    <div class="container">
        <p>&copy; 2024 MangaTh√®que - Votre collection de mangas et manhwas</p>
    </div>
</footer>
{% endblock %} 