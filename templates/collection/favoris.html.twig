{% extends 'base.html.twig' %}

{% block title %}Mes Favoris - Mangatek{% endblock %}

{% block body %}
<div class="main-container">
    <!-- Contenu principal -->
    <main>
        <div class="container">
    <div class="collection-header">
        <h1 class="collection-title">Mes Favoris</h1>
        <p class="collection-subtitle">Retrouvez toutes vos ≈ìuvres favorites</p>
    </div>

    {% if oeuvres is empty %}
        <div class="empty-state">
            <div style="color: var(--text-secondary); margin-bottom: 1.5rem; text-align: center;">
                <svg style="width: 4rem; height: 4rem; margin: 0 auto; display: block;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
            </div>
            <h3>Aucun favori pour le moment</h3>
            <p>Commencez √† ajouter des ≈ìuvres √† vos favoris pour les retrouver ici</p>
            <a href="{{ path('app_oeuvre_list') }}" class="btn-primary" style="display: inline-flex; align-items: center; gap: 0.5rem;">
                <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                D√©couvrir des ≈ìuvres
            </a>
        </div>
    {% else %}
        <div class="manga-grid">
            {% for oeuvre in oeuvres %}
                <div class="manga-card">
                        <div class="manga-cover-container">
                            {% if oeuvre.couverture %}
                                <img src="{{ path('image_proxy') }}?url={{ oeuvre.couverture|url_encode }}" 
                                     alt="{{ oeuvre.titre }}" 
                                     class="manga-cover"
                                     loading="lazy"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            {% else %}
                                <div class="manga-cover" style="background: linear-gradient(45deg, #374151, #4b5563); display: flex; align-items: center; justify-content: center; color: #9ca3af; font-size: 3rem;">
                                    üìñ
                                </div>
                            {% endif %}
                            <!-- Fallback cover si l'image √©choue -->
                            <div class="manga-cover" style="background: linear-gradient(45deg, #374151, #4b5563); display: none; align-items: center; justify-content: center; color: #9ca3af; font-size: 3rem;">
                                üìñ
                            </div>
                            <!-- C≈ìur favori en haut √† droite -->
                            <button 
                                class="btn-favorite coeur-favori favorited"
                                onclick="event.stopPropagation(); event.preventDefault(); toggleFavorite({{ oeuvre.id }}, this)"
                                data-oeuvre-id="{{ oeuvre.id }}"
                                title="Retirer des favoris"
                            >
                                <span class="favorite-icon" id="favorite-icon-{{ oeuvre.id }}">‚ù§Ô∏è</span>
                            </button>
                        </div>
                        <div class="manga-info">
                        <a href="{{ path('app_oeuvre_show', {'id': oeuvre.id}) }}" class="manga-card-link">
                            <h3 class="manga-title">{{ oeuvre.titre }}</h3>
                            <p class="manga-author">
                                {% if oeuvre.auteur %}
                                    {{ oeuvre.auteur.nom }}
                                {% else %}
                                    Auteur inconnu
                                {% endif %}
                            </p>
                            <div class="manga-meta">
                                <span class="manga-type">{{ oeuvre.type|default('MANGA') }}</span>
                                <span class="chapters-count">{{ oeuvre.chapitres|length }} ch.</span>
                            </div>
                        </a>
                            {% if oeuvre.tags|length > 0 %}
                        <div class="manga-genres">
                                {% for tag in oeuvre.tags|slice(0, 3) %}
                            <a href="{{ path('app_oeuvre_list', {tag: tag.id}) }}" class="manga-genre-badge">
                                    {{ tag.nom }}
                                </a>
                                {% endfor %}
                                {% if oeuvre.tags|length > 3 %}
                            <span class="manga-genres-count" style="grid-column: 2; grid-row: 2;">+{{ oeuvre.tags|length - 3 }}</span>
                                {% endif %}
                            </div>
                            {% endif %}
                            {% set collection = collections|filter(c => c.oeuvre.id == oeuvre.id)|first %}
                            {% if collection %}
                                <p style="color: var(--text-secondary); font-size: 0.7rem; margin: 0.5rem 0;">
                                    Ajout√© le {{ collection.dateAjout|date('d/m/Y') }}
                                </p>
                            {% endif %}
                            {% set latestChapter = oeuvre.chapitres|first %}
                            {% if latestChapter and latestChapter.createdAt > ("now"|date_modify('-2 days')) %}
                                <div class="new-badge">NEW</div>
                            {% endif %}
                        </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
    </main>
    <aside class="sidebar">
        <!-- Section des statistiques -->
        <div class="sidebar-section">
            <h3 class="sidebar-title">
                üìä Statistiques des Favoris
            </h3>
            <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span style="color: var(--text-secondary); font-size: 0.9rem;">≈íuvres favorites</span>
                    <span style="color: var(--accent-purple); font-weight: 600;">{{ oeuvres|length }}</span>
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span style="color: var(--text-secondary); font-size: 0.9rem;">Auteurs diff√©rents</span>
                    <span style="color: var(--accent-purple); font-weight: 600;">{{ auteursUniques }}</span>
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span style="color: var(--text-secondary); font-size: 0.9rem;">Total chapitres</span>
                    <span style="color: var(--accent-purple); font-weight: 600;">{{ oeuvres|map(o => o.chapitres|length)|reduce((a, b) => a + b, 0) }}</span>
                </div>
            </div>
        </div>

        <!-- Section des actions -->
        <div class="sidebar-section">
            <h3 class="sidebar-title">
                ‚ö° Actions
            </h3>
            <div class="sidebar-actions">
                <a href="{{ path('app_oeuvre_list') }}" class="sidebar-btn sidebar-btn-secondary">
                    üìö Catalogue
                </a>
                {% if oeuvres|length > 0 %}
                <button 
                    onclick="clearAllFavorites()"
                    class="sidebar-btn sidebar-btn-danger"
                    style="background: linear-gradient(135deg, #ef4444, #dc2626); color: white; border: none; cursor: pointer; transition: all 0.3s ease;"
                >
                    üóëÔ∏è Vider les favoris
                </button>
                {% endif %}
            </div>
        </div>

        <!-- Section des genres populaires dans les favoris -->
        {% if oeuvres|length > 0 %}
        <div class="sidebar-section">
            <h3 class="sidebar-title">
                üé≠ Genres dans vos favoris
            </h3>
            <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                {% set allTags = [] %}
                {% for oeuvre in oeuvres %}
                    {% for tag in oeuvre.tags %}
                        {% set allTags = allTags|merge([tag]) %}
                    {% endfor %}
                {% endfor %}
                
                {% set uniqueTags = [] %}
                {% for tag in allTags %}
                    {% if tag.id not in uniqueTags|map(t => t.id) %}
                        {% set uniqueTags = uniqueTags|merge([tag]) %}
                    {% endif %}
                {% endfor %}
                
                {% for tag in uniqueTags|slice(0, 8) %}
                <a href="{{ path('app_oeuvre_list', {tag: tag.id}) }}" 
                   style="background: linear-gradient(135deg, #e11d48, #be185d); color: white; padding: 0.3rem 0.8rem; border-radius: 12px; font-size: 0.7rem; font-weight: 600; text-decoration: none; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.2rem;"
                   onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 15px rgba(225, 29, 72, 0.4)'"
                   onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'">
                    {{ tag.nom }}
                </a>
                {% else %}
                <p style="color: var(--text-secondary); font-size: 0.8rem; font-style: italic;">Aucun genre dans vos favoris</p>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </aside>
</div>

<script>
function toggleFavorite(oeuvreId, button) {
    fetch(`/collections/toggle/${oeuvreId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            if (data.isFavorite) {
                button.classList.add('favorited');
                button.innerHTML = '<svg style="width: 1rem; height: 1rem;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path></svg>';
            } else {
                button.classList.remove('favorited');
                button.innerHTML = '<svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 20 20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"></path></svg>';
            }
            
            // Afficher une notification
            showNotification(data.message, data.success ? 'success' : 'error');
        }
    })
    .catch(error => {
        console.error('Erreur:', error);
        showNotification('Erreur lors de la modification des favoris', 'error');
    });
}

function removeFromFavorites(oeuvreId, button) {
    if (confirm('√ätes-vous s√ªr de vouloir retirer cette ≈ìuvre de vos favoris ?')) {
        fetch(`/collections/retirer/${oeuvreId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Supprimer la carte de l'interface
                const card = button.closest('.manga-card');
                card.style.opacity = '0';
                card.style.transform = 'scale(0.9)';
                setTimeout(() => {
                    card.remove();
                    
                    // V√©rifier s'il reste des favoris
                    const remainingCards = document.querySelectorAll('.manga-card');
                    if (remainingCards.length === 0) {
                        location.reload(); // Recharger pour afficher le message "aucun favori"
                    }
                }, 300);
                
                showNotification(data.message, 'success');
            }
        })
        .catch(error => {
            console.error('Erreur:', error);
            showNotification('Erreur lors de la suppression', 'error');
        });
    }
}

function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.style.cssText = `
        position: fixed;
        top: 1rem;
        right: 1rem;
        padding: 1rem;
        border-radius: 0.5rem;
        color: white;
        z-index: 50;
        transition: all 0.3s ease;
        background-color: ${type === 'success' ? '#10b981' : '#ef4444'};
    `;
    notification.textContent = message;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.style.opacity = '0';
        setTimeout(() => {
            notification.remove();
        }, 300);
    }, 3000);
}

function clearAllFavorites() {
    if (confirm('√ätes-vous s√ªr de vouloir vider tous vos favoris ? Cette action est irr√©versible.')) {
        const cards = document.querySelectorAll('.manga-card');
        let removedCount = 0;
        
        cards.forEach((card, index) => {
            const oeuvreId = card.querySelector('[data-oeuvre-id]').getAttribute('data-oeuvre-id');
            
            setTimeout(() => {
                fetch(`/collections/retirer/${oeuvreId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        card.style.opacity = '0';
                        card.style.transform = 'scale(0.9)';
                        setTimeout(() => {
                            card.remove();
                            removedCount++;
                            
                            if (removedCount === cards.length) {
                                location.reload(); // Recharger pour afficher le message "aucun favori"
                            }
                        }, 300);
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                });
            }, index * 100); // D√©lai progressif pour l'animation
        });
        
        showNotification('Suppression des favoris en cours...', 'success');
    }
}
</script>

