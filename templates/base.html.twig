<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}MangaThèque - Votre collection de mangas{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>📚</text></svg>">
        
        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
        
        <!-- Styles -->
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <!-- Navigation -->
        <nav class="navbar">
            <div class="navbar-container">
                <a href="{{ path('app_home') }}" class="navbar-brand">
                    📚 MangaThèque
                </a>
                
                <!-- Menu desktop -->
                <ul class="navbar-nav" id="main-nav">
                    <li><a href="{{ path('app_oeuvre_list') }}" class="nav-link">📚 Catalogue</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('app_favoris') }}" class="nav-link">❤️ Mes Favoris</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('admin_dashboard') }}" class="nav-link admin-link">🔐 Admin</a></li>
                        {% endif %}
                        <li><a href="{{ path('app_profile') }}" class="nav-link">👤 Mon Profil</a></li>
                        <li><a href="{{ path('app_logout') }}" class="nav-link logout-link">🚪 Déconnexion</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}" class="nav-link">🔑 Connexion</a></li>
                        <li><a href="{{ path('app_register') }}" class="nav-link register-link">✨ Inscription</a></li>
                    {% endif %}
                </ul>
                
                <!-- Recherche desktop -->
                <div class="search-box">
                    <form action="{{ path('app_oeuvre_list') }}" method="GET" style="display: flex; gap: 0.5rem;">
                        <input type="text" name="search" placeholder="Rechercher par titre, auteur ou genre..." class="search-input" value="{{ app.request.get('search', '') }}">
                        <button type="submit" class="btn-primary" style="padding: 0.5rem 1rem;">🔍</button>
                    </form>
                </div>

                <!-- Menu burger -->
                <button type="button" class="burger-menu" id="burger-menu" aria-label="Menu de navigation">
                    <div class="burger-container">
                    <div class="burger-line"></div>
                    <div class="burger-line"></div>
                    <div class="burger-line"></div>
                </div>
                </button>
            </div>
        </nav>

        <!-- Overlay mobile -->
        <div class="mobile-nav-overlay" id="mobile-overlay"></div>

        <!-- Menu mobile -->
        <div class="mobile-nav" id="mobile-nav">
            <div class="mobile-nav-header">
                <a href="{{ path('app_home') }}" class="mobile-nav-brand">📚 MangaThèque</a>
                <button class="mobile-nav-close" id="mobile-nav-close">×</button>
            </div>

            <div class="mobile-nav-content">
                <!-- Navigation principale -->
                <div class="mobile-nav-section">
                    <div class="mobile-nav-section-title">Navigation</div>
                    <ul class="mobile-nav-links">
                        <li><a href="{{ path('app_oeuvre_list') }}" class="mobile-nav-link">📚 Catalogue</a></li>
                        {% if app.user %}
                            <li><a href="{{ path('app_favoris') }}" class="mobile-nav-link">❤️ Mes Favoris</a></li>
                            <li><a href="{{ path('app_profile') }}" class="mobile-nav-link">👤 Mon Profil</a></li>
                        {% endif %}
                    </ul>
                </div>

                {% if app.user %}
                    <!-- Administration (si admin) -->
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="mobile-nav-section">
                            <div class="mobile-nav-section-title">Administration</div>
                            <ul class="mobile-nav-links">
                                <li><a href="{{ path('admin_dashboard') }}" class="mobile-nav-link admin-link">🔐 Dashboard Admin</a></li>
                            </ul>
                        </div>
                    {% endif %}

                    <!-- Compte -->
                    <div class="mobile-nav-section">
                        <div class="mobile-nav-section-title">Compte</div>
                        <ul class="mobile-nav-links">
                            <li><a href="{{ path('app_logout') }}" class="mobile-nav-link logout-link">🚪 Déconnexion</a></li>
                        </ul>
                    </div>
                {% else %}
                    <!-- Authentification -->
                    <div class="mobile-nav-section">
                        <div class="mobile-nav-section-title">Connexion</div>
                        <ul class="mobile-nav-links">
                            <li><a href="{{ path('app_login') }}" class="mobile-nav-link">🔑 Connexion</a></li>
                            <li><a href="{{ path('app_register') }}" class="mobile-nav-link register-link">✨ Inscription</a></li>
                        </ul>
                    </div>
                {% endif %}
            </div>

            <!-- Recherche mobile -->
            <div class="mobile-search">
                <form action="{{ path('app_oeuvre_list') }}" method="GET" class="mobile-search-form">
                    <input type="text" name="search" placeholder="Rechercher..." class="mobile-search-input" value="{{ app.request.get('search', '') }}">
                    <button type="submit" class="mobile-search-btn">🔍</button>
                </form>
            </div>
        </div>

        <!-- Messages Flash -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message flash-{{ type }}">
                    <div class="flash-message-content">
                        <span>{% if type == 'success' %}✅{% elseif type == 'error' %}❌{% elseif type == 'warning' %}⚠️{% else %}ℹ️{% endif %}</span>
                        <span>{{ message }}</span>
                        <button class="flash-message-close">×</button>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Contenu principal -->
        {% block body %}{% endblock %}

        <!-- Scripts -->
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        
        <!-- Scripts de composants -->
        <script src="{{ asset('scripts/components/burger-menu.js') }}"></script>
        <script src="{{ asset('scripts/components/flash-messages.js') }}"></script>
    </body>
</html>
