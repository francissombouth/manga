        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
        
        <!-- Styles -->
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% block stylesheets %}{% endblock %}
        <style>
            /* Menu burger styles */
            .burger-menu {
                display: none;
                flex-direction: column;
                justify-content: space-between;
                width: 24px;
                height: 20px;
                cursor: pointer;
                z-index: 1001;
                transition: all 0.3s ease;
            }

            .burger-line {
                width: 100%;
                height: 3px;
                background: white;
                border-radius: 2px;
                transition: all 0.3s ease;
                transform-origin: center;
            }

            .burger-menu.active .burger-line:nth-child(1) {
                transform: rotate(45deg) translate(5px, 5px);
            }

            .burger-menu.active .burger-line:nth-child(2) {
                opacity: 0;
            }

            .burger-menu.active .burger-line:nth-child(3) {
                transform: rotate(-45deg) translate(7px, -6px);
            }

            .mobile-nav-overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.8);
                z-index: 999;
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .mobile-nav-overlay.active {
                opacity: 1;
            }

            .mobile-nav {
                position: fixed;
                top: 0;
                right: -100%;
                width: min(300px, 85vw);
                height: 100%;
                background: linear-gradient(135deg, var(--bg-secondary), var(--bg-card));
                z-index: 1000;
                transition: right 0.3s ease;
                border-left: 1px solid var(--border-color);
                backdrop-filter: blur(20px);
                overflow-y: auto;
            }

            .mobile-nav.active {
                right: 0;
            }

            .mobile-nav-header {
                padding: 2rem 1.5rem 1rem;
                border-bottom: 1px solid var(--border-color);
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

            .mobile-nav-brand {
                font-size: 1.3rem;
                font-weight: 800;
                color: var(--text-primary);
                text-decoration: none;
            }

            .mobile-nav-close {
                background: none;
                border: none;
                color: var(--text-primary);
                font-size: 1.5rem;
                cursor: pointer;
                padding: 0.5rem;
                border-radius: 8px;
                transition: all 0.3s ease;
            }

            .mobile-nav-close:hover {
                background: var(--bg-card-hover);
                color: var(--accent-purple);
            }

            .mobile-nav-content {
                padding: 1rem 0;
            }

            .mobile-nav-section {
                margin-bottom: 1.5rem;
            }

            .mobile-nav-section-title {
                padding: 0 1.5rem 0.5rem;
                font-size: 0.8rem;
                font-weight: 600;
                color: var(--text-muted);
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .mobile-nav-links {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .mobile-nav-link {
                display: block;
                padding: 1rem 1.5rem;
                color: var(--text-primary);
                text-decoration: none;
                font-weight: 500;
                transition: all 0.3s ease;
                border-left: 3px solid transparent;
            }

            .mobile-nav-link:hover {
                background: rgba(139, 92, 246, 0.1);
                color: var(--accent-purple);
                border-left-color: var(--accent-purple);
                text-decoration: none;
            }

            .mobile-nav-link.admin-link {
                background: linear-gradient(135deg, var(--accent-purple), var(--accent-purple-dark));
                color: white;
                border-left-color: white;
            }

            .mobile-nav-link.register-link {
                background: linear-gradient(135deg, #10b981, #059669);
                color: white;
                border-left-color: white;
            }

            .mobile-nav-link.logout-link:hover {
                background: rgba(239, 68, 68, 0.1);
                color: #ef4444;
                border-left-color: #ef4444;
            }

            .mobile-search {
                padding: 1rem 1.5rem;
                border-top: 1px solid var(--border-color);
                margin-top: 1rem;
            }

            .mobile-search-form {
                display: flex;
                gap: 0.5rem;
            }

            .mobile-search-input {
                flex: 1;
                background: var(--bg-card);
                border: 1px solid var(--border-color);
                border-radius: 8px;
                padding: 0.8rem;
                color: var(--text-primary);
                font-size: 0.9rem;
            }

            .mobile-search-input:focus {
                outline: none;
                border-color: var(--accent-purple);
                box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.2);
            }

            .mobile-search-btn {
                background: var(--accent-purple);
                color: white;
                border: none;
                border-radius: 8px;
                padding: 0.8rem 1rem;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .mobile-search-btn:hover {
                background: var(--accent-purple-dark);
                transform: translateY(-1px);
            }

            /* Navigation desktop/mobile */
            .navbar-nav {
                display: flex;
            }
            
            .search-box {
                display: flex;
            }
            
            .burger-menu {
                display: none;
            }

            /* Responsive breakpoints */
            @media (max-width: 900px) {
                .navbar-nav {
                    display: none !important;
                }
                .search-box {
                    display: none !important;
                }
                .burger-menu {
                    display: flex !important;
                }
                .navbar-container {
                    flex-wrap: nowrap;
                }
            }

            @media (max-width: 480px) {
                .mobile-nav {
                    width: 90vw !important;
                    right: -90vw !important;
                }
                
                .mobile-nav.active {
                    right: 0 !important;
                }
                .navbar-brand {
                    font-size: 1.2rem;
                    word-break: break-word;
                }
                .mobile-nav-brand {
                    font-size: 1.2rem;
                    word-break: break-word;
                }
                .navbar-container {
                    padding: 0 0.5rem;
                    max-width: 100%;
                }
                .search-input, .mobile-search-input {
                    max-width: 100%;
                    min-width: 0;
                }
            }
            
                            /* Pr√©vention globale du d√©passement pleine largeur */
                @media (max-width: 768px) {
                    * {
                        max-width: 100%;
                        box-sizing: border-box;
                    }
                    .navbar-container, .container, .main-container {
                        max-width: 100vw;
                        margin: 0;
                        overflow-x: hidden;
                    }
                    
                    /* Navigation mobile pleine largeur */
                    .mobile-nav {
                        width: 85vw !important;
                        right: -85vw !important;
                    }
                    
                    .mobile-nav.active {
                        right: 0 !important;
                    }
                }
        </style>
    </head>
