{% extends 'base.html.twig' %}

{% block title %}{{ chapter.title }} - {{ manga ? manga.title : 'MangaThèque' }}{% endblock %}

{% block body %}
<div class="main-container">
    <!-- Contenu principal -->
    <main>
        <!-- Breadcrumb -->
        <div class="breadcrumb-container" style="background: rgba(139, 92, 246, 0.1); padding: 1rem 0; margin-bottom: 2rem; border-radius: 12px;">
            <div style="display: flex; align-items: center; gap: 0.5rem; color: var(--text-secondary); font-size: 0.9rem;">
                <a href="{{ path('mangadx_home') }}" style="color: var(--accent-purple); text-decoration: none;">🌐 MangaDX</a>
                <span>→</span>
                {% if manga %}
                    <a href="{{ path('mangadx_manga_show', {id: manga.id}) }}" style="color: var(--accent-purple); text-decoration: none;">{{ manga.title }}</a>
                    <span>→</span>
                {% endif %}
                <span>{{ chapter.title }}</span>
            </div>
        </div>

        <!-- Header du chapitre -->
        <div class="chapitre-header" style="background: var(--card-bg); border-radius: 20px; padding: 3rem; margin-bottom: 2rem; box-shadow: var(--shadow-lg); text-align: center;">
            {% if manga %}
            <div style="color: var(--text-secondary); font-size: 1rem; margin-bottom: 1rem;">
                <a href="{{ path('mangadx_manga_show', {id: manga.id}) }}" style="color: var(--accent-purple); text-decoration: none; font-weight: 600;">
                    🌐 {{ manga.title }}
                </a>
            </div>
            {% endif %}
            <h1 style="font-size: 2.5rem; font-weight: 800; color: var(--text-primary); margin-bottom: 1rem;">{{ chapter.title }}</h1>
            <div style="display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap;">
                <span style="background: var(--accent-purple); color: white; padding: 0.5rem 1rem; border-radius: 20px; font-weight: 600;">
                    Ch. {{ chapter.chapter }}
                </span>
                {% if chapter.volume %}
                <span style="background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); padding: 0.5rem 1rem; border-radius: 20px; font-weight: 600;">
                    Vol. {{ chapter.volume }}
                </span>
                {% endif %}
                <span style="background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); padding: 0.5rem 1rem; border-radius: 20px; font-weight: 600;">
                    MangaDX
                </span>
            </div>
        </div>

        <!-- Navigation entre chapitres -->
        <div style="background: var(--card-bg); border-radius: 15px; padding: 1.5rem; margin-bottom: 2rem; box-shadow: var(--shadow-md);">
            <div style="display: flex; justify-content: space-between; align-items: center; gap: 1rem;">
                {% if previousChapter %}
                    <a href="{{ path('mangadx_chapter_show', {id: previousChapter.id}) }}" style="background: var(--accent-purple); color: white; padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.5rem;">
                        ← Chapitre précédent
                    </a>
                {% else %}
                    <span style="color: var(--text-muted); padding: 0.8rem 1.5rem;">Premier chapitre</span>
                {% endif %}

                {% if manga %}
                <a href="{{ path('mangadx_manga_show', {id: manga.id}) }}" style="background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; border: 2px solid var(--accent-purple);">
                    📚 Retour au manga
                </a>
                {% else %}
                <a href="{{ path('mangadx_home') }}" style="background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; border: 2px solid var(--accent-purple);">
                    🌐 Retour à MangaDX
                </a>
                {% endif %}

                {% if nextChapter %}
                    <a href="{{ path('mangadx_chapter_show', {id: nextChapter.id}) }}" style="background: var(--accent-purple); color: white; padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.5rem;">
                        Chapitre suivant →
                    </a>
                {% else %}
                    <span style="color: var(--text-muted); padding: 0.8rem 1.5rem;">Dernier chapitre</span>
                {% endif %}
            </div>
        </div>

        <!-- Contenu du chapitre -->
        <div class="chapitre-content" style="background: var(--card-bg); border-radius: 20px; overflow: hidden; box-shadow: var(--shadow-lg); margin-bottom: 2rem;">
            {% if pages is defined and pages|length > 0 %}
                {% for page in pages %}
                    <div class="page-content" style="margin-bottom: 0; text-align: center;">
                        <img src="{{ page.url }}" alt="Page {{ loop.index }}" style="max-width: 100%; height: auto; display: block; margin: 0 auto;" class="page-image" loading="lazy">
                    </div>
                {% endfor %}
            {% else %}
                <div style="padding: 4rem 2rem; text-align: center; color: var(--text-secondary);">
                    <div style="font-size: 4rem; margin-bottom: 1rem;">📄</div>
                    <h3 style="color: var(--text-primary); margin-bottom: 1rem;">Chargement des pages...</h3>
                    <p>Les pages sont en cours de chargement depuis MangaDX.</p>
                    <div style="margin-top: 2rem;">
                        <div style="background: var(--accent-purple); color: white; padding: 0.5rem 1rem; border-radius: 20px; display: inline-block; animation: pulse 2s infinite;">
                            📡 Récupération en cours...
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Navigation finale -->
        <div style="background: var(--card-bg); border-radius: 15px; padding: 2rem; box-shadow: var(--shadow-lg);">
            <div style="display: flex; justify-content: space-between; align-items: center; gap: 1rem; flex-wrap: wrap;">
                {% if previousChapter %}
                    <a href="{{ path('mangadx_chapter_show', {id: previousChapter.id}) }}" style="background: var(--accent-purple); color: white; padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.5rem;">
                        ← {{ previousChapter.title|slice(0, 30) }}{% if previousChapter.title|length > 30 %}...{% endif %}
                    </a>
                {% else %}
                    <div></div>
                {% endif %}

                <div style="text-align: center;">
                    {% if manga %}
                    <a href="{{ path('mangadx_manga_show', {id: manga.id}) }}" style="background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); padding: 0.8rem 2rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; border: 2px solid var(--accent-purple); display: inline-flex; align-items: center; gap: 0.5rem;">
                        📚 Voir tous les chapitres
                    </a>
                    {% else %}
                    <a href="{{ path('mangadx_home') }}" style="background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); padding: 0.8rem 2rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; border: 2px solid var(--accent-purple); display: inline-flex; align-items: center; gap: 0.5rem;">
                        🌐 Retour à MangaDX
                    </a>
                    {% endif %}
                </div>

                {% if nextChapter %}
                    <a href="{{ path('mangadx_chapter_show', {id: nextChapter.id}) }}" style="background: var(--accent-purple); color: white; padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.5rem;">
                        {{ nextChapter.title|slice(0, 30) }}{% if nextChapter.title|length > 30 %}...{% endif %} →
                    </a>
                {% else %}
                    <div></div>
                {% endif %}
            </div>
        </div>
    </main>

    <!-- Sidebar -->
    <aside class="sidebar">
        <!-- Informations condensées -->
        <div class="sidebar-section">
            <h3 class="sidebar-title">📖 Ch. {{ chapter.chapter }}</h3>
            <div class="sidebar-details">
                {% if chapter.volume %}
                <div class="sidebar-detail-item">
                    <span>Volume</span>
                    <span>{{ chapter.volume }}</span>
                </div>
                {% endif %}
                <div class="sidebar-detail-item">
                    <span>Pages</span>
                    <span>{{ pages is defined ? pages|length : '?' }}</span>
                </div>
                <div class="sidebar-detail-item">
                    <span>Source</span>
                    <span>MangaDX</span>
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <div class="sidebar-section">
            <h3 class="sidebar-title">🧭 Navigation</h3>
            <div class="sidebar-actions">
                {% if previousChapter %}
                <a href="{{ path('mangadx_chapter_show', {id: previousChapter.id}) }}" class="sidebar-btn sidebar-btn-primary">
                    ← Précédent
                </a>
                {% endif %}
                {% if manga %}
                <a href="{{ path('mangadx_manga_show', {id: manga.id}) }}" class="sidebar-btn sidebar-btn-secondary">
                    📚 Tous
                </a>
                {% endif %}
                {% if nextChapter %}
                <a href="{{ path('mangadx_chapter_show', {id: nextChapter.id}) }}" class="sidebar-btn sidebar-btn-success">
                    Suivant →
                </a>
                {% endif %}
            </div>
        </div>

        <!-- Actions rapides -->
        <div class="sidebar-section">
            <h3 class="sidebar-title">⚡ Actions</h3>
            <div class="sidebar-actions">
                <a href="{{ path('mangadx_home') }}" class="sidebar-btn sidebar-btn-info">
                    🌐 MangaDX
                </a>
                <a href="{{ path('app_oeuvre_list') }}" class="sidebar-btn sidebar-btn-success">
                    📚 Collection
                </a>
            </div>
        </div>
    </aside>
</div>


{% endblock %} 