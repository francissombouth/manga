{% extends 'base.html.twig' %}

{% block title %}{{ manga.title }} - MangaThèque{% endblock %}

{% block stylesheets %}
<style>
/* Styles spécifiques VortexScans pour la page de détail manga */
.breadcrumb {
    background: var(--bg-secondary);
    padding: 1rem 0;
    border-bottom: 1px solid var(--border-secondary);
}

.breadcrumb-list {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.breadcrumb-list a {
    color: var(--accent-primary);
    text-decoration: none;
    transition: color 0.3s ease;
}

.breadcrumb-list a:hover {
    color: var(--accent-secondary);
}

.manga-container {
    padding: 3rem 0;
    background: var(--bg-primary);
}

.manga-header {
    background: var(--gradient-card);
    padding: 3rem;
    border-radius: 20px;
    border: 1px solid var(--border-secondary);
    box-shadow: var(--shadow-secondary);
    margin-bottom: 3rem;
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 3rem;
}

.manga-cover {
    width: 100%;
    height: 450px;
    object-fit: cover;
    border-radius: 15px;
    box-shadow: var(--shadow-glow);
    transition: all 0.3s ease;
}

.manga-cover:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: var(--shadow-glow), var(--shadow-secondary);
}

.manga-details h1 {
    font-size: 2.5rem;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--text-primary), var(--accent-primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.manga-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    margin-bottom: 2rem;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
}

.meta-item strong {
    color: var(--accent-primary);
}

.manga-genres {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    margin-bottom: 2rem;
}

.manga-description {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 2rem;
    font-size: 1.1rem;
}

.chapters-section {
    background: var(--gradient-card);
    padding: 3rem;
    border-radius: 20px;
    border: 1px solid var(--border-secondary);
    box-shadow: var(--shadow-secondary);
}

.language-stats {
    margin-bottom: 3rem;
    padding: 2rem;
    background: rgba(99, 102, 241, 0.1);
    border-radius: 15px;
    border-left: 4px solid var(--accent-primary);
}

.language-stats h3 {
    margin: 0 0 1.5rem 0;
    color: var(--text-primary);
    font-size: 1.3rem;
    font-weight: 600;
}

.language-filters {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.language-filter {
    padding: 0.8rem 1.5rem;
    border: 2px solid var(--border-secondary);
    background: var(--bg-card);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
    color: var(--text-primary);
}

.language-filter:hover {
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    transform: translateY(-2px);
}

.language-filter.active {
    background: var(--gradient-primary);
    color: white;
    border-color: var(--accent-primary);
}

.language-group {
    margin-bottom: 3rem;
}

.language-group.hidden {
    display: none;
}

.language-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--border-secondary);
}

.language-header h3 {
    color: var(--text-primary);
    margin: 0;
    font-size: 1.4rem;
    font-weight: 600;
}

.chapter-count {
    color: var(--text-secondary);
    font-weight: normal;
    font-size: 1rem;
}

.chapters-grid {
    display: grid;
    gap: 1.5rem;
}

.chapter-item {
    background: var(--bg-card);
    border: 1px solid var(--border-secondary);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.chapter-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-primary);
    transform: scaleX(0);
    transition: transform 0.3s ease;
}

.chapter-item:hover::before {
    transform: scaleX(1);
}

.chapter-item:hover {
    border-color: var(--accent-primary);
    background: rgba(99, 102, 241, 0.05);
    transform: translateX(5px);
    box-shadow: var(--shadow-glow);
}

.chapter-info h4 {
    color: var(--text-primary);
    margin: 0 0 0.8rem 0;
    font-size: 1.2rem;
    font-weight: 600;
}

.chapter-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.meta-group {
    display: flex;
    align-items: center;
    gap: 0.3rem;
}

.read-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--gradient-primary);
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-top: 1rem;
}

.read-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
    color: white;
    text-decoration: none;
}

.no-chapters {
    text-align: center;
    padding: 4rem;
    color: var(--text-secondary);
}

.no-chapters h3 {
    color: var(--text-primary);
    font-size: 1.8rem;
    margin-bottom: 1rem;
    font-weight: 600;
}

.back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--bg-card);
    color: var(--text-primary);
    padding: 0.8rem 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 1px solid var(--border-secondary);
}

.back-link:hover {
    background: var(--accent-primary);
    color: white;
    text-decoration: none;
    transform: translateY(-2px);
    border-color: var(--accent-primary);
}

.manga-actions {
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
}

.add-to-collection-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--gradient-primary);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-secondary);
}

.add-to-collection-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
}

.add-to-collection-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
}

.add-to-collection-btn.success {
    background: linear-gradient(135deg, #10b981, #059669);
}

.notification {
    position: fixed;
    top: 2rem;
    right: 2rem;
    background: var(--gradient-primary);
    color: white;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-glow);
    z-index: 1000;
    transform: translateX(100%);
    transition: transform 0.3s ease;
}

.notification.show {
    transform: translateX(0);
}

.notification.success {
    background: linear-gradient(135deg, #10b981, #059669);
}

.notification.error {
    background: linear-gradient(135deg, #ef4444, #dc2626);
}

/* Responsive VortexScans */
@media (max-width: 768px) {
    .manga-header {
        grid-template-columns: 1fr;
        gap: 2rem;
        padding: 2rem;
    }
    
    .manga-cover {
        max-width: 280px;
        height: 400px;
        margin: 0 auto;
    }
    
    .manga-details h1 {
        font-size: 2rem;
        text-align: center;
    }
    
    .chapters-section {
        padding: 2rem 1rem;
    }
    
    .language-stats {
        padding: 1.5rem;
    }
}
</style>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const languageFilters = document.querySelectorAll('.language-filter');
    const languageGroups = document.querySelectorAll('.language-group');
    
    languageFilters.forEach(filter => {
        filter.addEventListener('click', function() {
            const selectedLanguage = this.dataset.language;
            
            // Mettre à jour les boutons actifs
            languageFilters.forEach(f => f.classList.remove('active'));
            this.classList.add('active');
            
            // Afficher/masquer les groupes de langues
            if (selectedLanguage === 'all') {
                languageGroups.forEach(group => {
                    group.classList.remove('hidden');
                });
            } else {
                languageGroups.forEach(group => {
                    if (group.dataset.language === selectedLanguage) {
                        group.classList.remove('hidden');
                    } else {
                        group.classList.add('hidden');
                    }
                });
            }
        });
    });
});

function addToCollection(mangaId) {
    const btn = document.getElementById('addToCollectionBtn');
    const originalText = btn.innerHTML;
    
    // Désactiver le bouton et changer le texte
    btn.disabled = true;
    btn.innerHTML = '<span>⏳</span><span>Ajout aux favoris...</span>';
    
    fetch(`/mangadx/manga/${mangaId}/add-to-collection`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Succès
            btn.innerHTML = '<span>✅</span><span>Ajouté aux favoris !</span>';
            btn.classList.add('success');
            showNotification(data.message, 'success');
            
            // Après 3 secondes, revenir au texte original
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.classList.remove('success');
                btn.disabled = false;
            }, 3000);
        } else {
            // Erreur
            btn.innerHTML = originalText;
            btn.disabled = false;
            showNotification(data.message, 'error');
        }
    })
    .catch(error => {
        console.error('Erreur:', error);
        btn.innerHTML = originalText;
        btn.disabled = false;
        showNotification('Une erreur est survenue', 'error');
    });
}

function showNotification(message, type = 'info') {
    // Supprimer les notifications existantes
    const existingNotifications = document.querySelectorAll('.notification');
    existingNotifications.forEach(n => n.remove());
    
    // Créer la nouvelle notification
    const notification = document.createElement('div');
    notification.className = `notification ${type}`;
    notification.textContent = message;
    
    document.body.appendChild(notification);
    
    // Animer l'apparition
    setTimeout(() => {
        notification.classList.add('show');
    }, 100);
    
    // Supprimer après 5 secondes
    setTimeout(() => {
        notification.classList.remove('show');
        setTimeout(() => {
            notification.remove();
        }, 300);
    }, 5000);
}
</script>
{% endblock %} 

{% block body %}


<div class="breadcrumb">
    <div class="container">
        <ul class="breadcrumb-list">
            <li><a href="{{ path('mangadx_home') }}">🏠 Accueil</a></li>
            <li>→</li>
            <li>📖 {{ manga.title }}</li>
        </ul>
    </div>
</div>

<div class="manga-container">
    <div class="container">
        <div class="manga-header">
            {% if manga.cover_url %}
                <img src="{{ path('image_proxy') }}?url={{ manga.cover_url|url_encode }}" 
                     alt="{{ manga.title }}" 
                     class="manga-cover" 
                     loading="lazy" 
                     onerror="this.src='{{ path('image_proxy') }}';">
            {% else %}
                <img src="{{ path('image_proxy') }}" 
                     alt="{{ manga.title }}" 
                     class="manga-cover">
            {% endif %}
            
            <div class="manga-details">
                <h1>{{ manga.title }}</h1>
                
                <div class="manga-meta">
                    {% if manga.authors %}
                        <div class="meta-item">
                            <span>👤</span>
                            <strong>{{ manga.authors|join(', ') }}</strong>
                        </div>
                    {% endif %}
                    
                    <div class="meta-item">
                        <span>📊</span>
                        <strong>{{ manga.status|title }}</strong>
                    </div>
                    
                    {% if manga.year %}
                        <div class="meta-item">
                            <span>📅</span>
                            <strong>{{ manga.year }}</strong>
                        </div>
                    {% endif %}
                    
                    <div class="meta-item">
                        <span>🔞</span>
                        <strong>{{ manga.content_rating|title }}</strong>
                    </div>
                </div>
                
                {% if manga.tags %}
                    <div class="manga-genres">
                        {% for tag in manga.tags %}
                            <span class="tag">{{ tag }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
                
                {% if manga.description %}
                    <div class="manga-description">
                        {{ manga.description|slice(0, 400) }}{% if manga.description|length > 400 %}...{% endif %}
                    </div>
                {% endif %}
                
                <div class="manga-actions">
                    <button type="button" 
                            class="add-to-collection-btn" 
                            onclick="addToCollection('{{ manga.id }}')"
                            id="addToCollectionBtn">
                        <span>⭐</span>
                        <span>Ajouter aux favoris</span>
                    </button>
                </div>
            </div>
        </div>
        
        <div class="chapters-section">
            <h2 class="section-title">
                📚 Chapitres ({{ chapters|length }})
            </h2>
            
            {% if chapters|length > 100 %}
                <div style="text-align: center; margin-bottom: 2rem; padding: 1rem; background: #d4edda; border-radius: 10px; color: #155724;">
                    <strong>✅ Récupération complète !</strong><br>
                    <small>Tous les {{ chapters|length }} chapitres ont été récupérés (pagination automatique)</small>
                </div>
            {% endif %}
            
            <div style="text-align: center; margin-bottom: 2rem; padding: 1rem; background: #f0f9ff; border-radius: 10px; color: #0c4a6e; border: 1px solid #0ea5e9;">
                <small>
                    🔄 <strong>Chapitres en temps réel</strong> : Synchronisés avec MangaDx.org
                    <br>📅 Dernière vérification : {{ "now"|date("d/m/Y à H:i") }} • 
                    {% if chapters|length > 0 %}
                        📈 {{ chapters|length }} chapitre{{ chapters|length > 1 ? 's' : '' }} disponible{{ chapters|length > 1 ? 's' : '' }}
                    {% else %}
                        📊 Aucun chapitre disponible pour l'instant
                    {% endif %}
                </small>
            </div>
            
            {% if chapters %}
                {# Regrouper les chapitres par langue #}
                {% set chapters_by_language = {} %}
                {% for chapter in chapters %}
                    {% set lang = chapter.language ?? 'unknown' %}
                    {% if chapters_by_language[lang] is not defined %}
                        {% set chapters_by_language = chapters_by_language|merge({(lang): []}) %}
                    {% endif %}
                    {% set chapters_by_language = chapters_by_language|merge({(lang): chapters_by_language[lang]|merge([chapter])}) %}
                {% endfor %}
                
                {# Afficher les statistiques par langue #}
                {% if chapters_by_language|length > 1 %}
                    <div class="language-stats">
                        <h3>📊 Langues disponibles :</h3>
                        <div class="language-filters">
                            <button class="language-filter active" data-language="all">
                                🌐 Toutes ({{ chapters|length }})
                            </button>
                            {% for language, lang_chapters in chapters_by_language %}
                                {% set first_chapter = lang_chapters[0] %}
                                <button class="language-filter" data-language="{{ language }}">
                                    {{ first_chapter.language_flag ?? '🌐' }} {{ first_chapter.language_name ?? 'Inconnu' }} ({{ lang_chapters|length }})
                                </button>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
                
                {# Afficher les chapitres groupés par langue #}
                {% if chapters_by_language|length > 1 %}
                    {% for language, lang_chapters in chapters_by_language %}
                        {% set first_chapter = lang_chapters[0] %}
                        <div class="language-group" data-language="{{ language }}">
                            <div class="language-header">
                                <h3>
                                    {{ first_chapter.language_flag ?? '🌐' }} 
                                    {{ first_chapter.language_name ?? 'Langue inconnue' }}
                                    <span class="chapter-count">({{ lang_chapters|length }} chapitre{{ lang_chapters|length > 1 ? 's' : '' }})</span>
                                </h3>
                            </div>
                            <div class="chapters-grid">
                                {% for chapter in lang_chapters %}
                                    <div class="chapter-item">
                                        <div class="chapter-info">
                                            <h4>{{ chapter.title }}</h4>
                                            <div class="chapter-meta">
                                                {% if chapter.volume %}
                                                    <span>📖 Volume {{ chapter.volume }}</span>
                                                {% endif %}
                                                {% if chapter.chapter %}
                                                    <span>📄 Chapitre {{ chapter.chapter }}</span>
                                                {% endif %}
                                                {% if chapter.pages_count %}
                                                    <span>📝 {{ chapter.pages_count }} pages</span>
                                                {% endif %}
                                                {% if chapter.published_at %}
                                                    <span>📅 {{ chapter.published_at|date('d/m/Y') }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        
                                        <div class="chapter-actions">
                                            <a href="{{ path('mangadx_chapter_show', {id: chapter.id}) }}" class="btn btn-primary">
                                                📖 Lire
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    {# Une seule langue, affichage simple #}
                    <div class="chapters-grid">
                        {% for chapter in chapters %}
                            <div class="chapter-item">
                                <div class="chapter-info">
                                    <h3>{{ chapter.title }}</h3>
                                    <div class="chapter-meta">
                                        {% if chapter.volume %}
                                            <span>📖 Volume {{ chapter.volume }}</span>
                                        {% endif %}
                                        {% if chapter.chapter %}
                                            <span>📄 Chapitre {{ chapter.chapter }}</span>
                                        {% endif %}
                                        {% if chapter.language_flag %}
                                            <span>{{ chapter.language_flag }} {{ chapter.language_name }}</span>
                                        {% endif %}
                                        {% if chapter.pages_count %}
                                            <span>📝 {{ chapter.pages_count }} pages</span>
                                        {% endif %}
                                        {% if chapter.published_at %}
                                            <span>📅 {{ chapter.published_at|date('d/m/Y') }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                                
                                <div class="chapter-actions">
                                    <a href="{{ path('mangadx_chapter_show', {id: chapter.id}) }}" class="btn btn-primary">
                                        📖 Lire
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            {% else %}
                <div style="text-align: center; padding: 3rem; color: #6c757d;">
                    <h3>Aucun chapitre disponible</h3>
                    <p>Ce manga n'a pas encore de chapitres disponibles.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<footer class="credit">
    <div class="container">
        <p>
            Données fournies par <a href="https://mangadex.org" target="_blank">MangaDx</a> • 
            Merci aux équipes de traduction • 
            Application respectant la <a href="https://api.mangadx.org/docs/" target="_blank">politique d'usage MangaDx</a>
        </p>
    </div>
</footer>
{% endblock %} 