{% extends 'base.html.twig' %}

{% block title %}{{ chapitre.titre }} - {{ chapitre.oeuvre.titre }}{% endblock %}

{% block body %}
<div class="main-container">
    <!-- Contenu principal -->
    <main>
        <!-- Breadcrumb -->
        <div class="breadcrumb-container" style="background: rgba(139, 92, 246, 0.1); padding: 1rem 0; margin-bottom: 2rem; border-radius: 12px;">
            <div style="display: flex; align-items: center; gap: 0.5rem; color: var(--text-secondary); font-size: 0.9rem;">
                <a href="{{ path('app_oeuvre_list') }}" style="color: var(--accent-purple); text-decoration: none;">📚 Catalogue</a>
                <span>→</span>
                <a href="{{ path('app_oeuvre_show', {id: chapitre.oeuvre.id}) }}" style="color: var(--accent-purple); text-decoration: none;">{{ chapitre.oeuvre.titre }}</a>
                <span>→</span>
                <span>{{ chapitre.titre }}</span>
            </div>
        </div>

        <!-- Header du chapitre -->
        <div class="chapitre-header" style="background: var(--card-bg); border-radius: 20px; padding: 3rem; margin-bottom: 2rem; box-shadow: var(--shadow-lg); text-align: center;">
            <div style="color: var(--text-secondary); font-size: 1rem; margin-bottom: 1rem;">
                <a href="{{ path('app_oeuvre_show', {id: chapitre.oeuvre.id}) }}" style="color: var(--accent-purple); text-decoration: none; font-weight: 600;">
                    📖 {{ chapitre.oeuvre.titre }}
                </a>
            </div>
            <h1 style="font-size: 2.5rem; font-weight: 800; color: var(--text-primary); margin-bottom: 1rem;">{{ chapitre.titre }}</h1>
            <div style="display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap;">
                <span style="background: var(--accent-purple); color: white; padding: 0.5rem 1rem; border-radius: 20px; font-weight: 600;">
                    Chapitre {{ chapitre.ordre }}
                </span>
                <span style="background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); padding: 0.5rem 1rem; border-radius: 20px; font-weight: 600;">
                    {{ chapitre.oeuvre.chapitres|length }} chapitres au total
                </span>
            </div>
            <p style="margin-top: 1rem; color: var(--text-secondary);">
                Chapitre {{ chapitre.ordre }} sur {{ chapitre.oeuvre.chapitres|length }}
            </p>
        </div>

        <!-- Navigation entre chapitres -->
        <div style="background: var(--card-bg); border-radius: 15px; padding: 1.5rem; margin-bottom: 2rem; box-shadow: var(--shadow-md);">
            <div style="display: flex; justify-content: space-between; align-items: center; gap: 1rem;">
                {% if chapitre.previousChapitre %}
                    <a href="{{ path('app_chapitre_show', {id: chapitre.previousChapitre.id}) }}" style="background: var(--accent-purple); color: white; padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.5rem;">
                        ← Chapitre précédent
                    </a>
                {% else %}
                    <span style="color: var(--text-muted); padding: 0.8rem 1.5rem;">Premier chapitre</span>
                {% endif %}

                <a href="{{ path('app_oeuvre_show', {id: chapitre.oeuvre.id}) }}" style="background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; border: 2px solid var(--accent-purple);">
                    📚 Retour à l'œuvre
                </a>

                {% if chapitre.nextChapitre %}
                    <a href="{{ path('app_chapitre_show', {id: chapitre.nextChapitre.id}) }}" style="background: var(--accent-purple); color: white; padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.5rem;">
                        Chapitre suivant →
                    </a>
                {% else %}
                    <span style="color: var(--text-muted); padding: 0.8rem 1.5rem;">Dernier chapitre</span>
                {% endif %}
            </div>
        </div>

        <!-- Contenu du chapitre - IMAGES DIRECTES SANS PROXY -->
        <div class="chapitre-content" style="background: var(--card-bg); border-radius: 20px; overflow: hidden; box-shadow: var(--shadow-lg); margin-bottom: 2rem;">
            {% if chapitre.pages|length > 0 %}
                {% for page in chapitre.pages %}
                    <div class="page-content" style="margin-bottom: 0; text-align: center;">
'                        <img src="{{ page }}" alt="Page {{ loop.index }}" style="max-width: 100%; height: auto; display: block; margin: 0 auto;" class="page-image">
                    </div>
                {% endfor %}
            {% else %}
                <div style="padding: 4rem 2rem; text-align: center; color: var(--text-secondary);">
                    <div style="font-size: 4rem; margin-bottom: 1rem;">📄</div>
                    <h3 style="color: var(--text-primary); margin-bottom: 1rem;">Aucune page disponible</h3>
                    <p>Ce chapitre n'a pas encore de pages publiées.</p>
                    <a href="{{ path('app_oeuvre_show', {id: chapitre.oeuvre.id}) }}" style="background: var(--accent-purple); color: white; padding: 0.8rem 2rem; border-radius: 25px; text-decoration: none; font-weight: 600; margin-top: 1rem; display: inline-block;">
                        📚 Retour à l'œuvre
                    </a>
                </div>
            {% endif %}
        </div>

        <!-- Navigation finale -->
        <div style="background: var(--card-bg); border-radius: 15px; padding: 2rem; box-shadow: var(--shadow-lg);">
            <div style="display: flex; justify-content: space-between; align-items: center; gap: 1rem; flex-wrap: wrap;">
                {% if chapitre.previousChapitre %}
                    <a href="{{ path('app_chapitre_show', {id: chapitre.previousChapitre.id}) }}" style="background: var(--accent-purple); color: white; padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.5rem;">
                        ← {{ chapitre.previousChapitre.titre }}
                    </a>
                {% else %}
                    <div></div>
                {% endif %}

                <div style="text-align: center;">
                    <a href="{{ path('app_oeuvre_show', {id: chapitre.oeuvre.id}) }}" style="background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); padding: 0.8rem 2rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; border: 2px solid var(--accent-purple); display: inline-flex; align-items: center; gap: 0.5rem;">
                        📚 Voir tous les chapitres
                    </a>
                </div>

                {% if chapitre.nextChapitre %}
                    <a href="{{ path('app_chapitre_show', {id: chapitre.nextChapitre.id}) }}" style="background: var(--accent-purple); color: white; padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.5rem;">
                        {{ chapitre.nextChapitre.titre }} →
                    </a>
                {% else %}
                    <div></div>
                {% endif %}
            </div>
        </div>
    </main>

    <!-- Sidebar -->
    <aside class="sidebar">
        <!-- Informations condensées -->
        <div class="sidebar-section">
            <h3 class="sidebar-title">📖 Chapitre {{ chapitre.ordre }}</h3>
            <div class="sidebar-details">
                <div class="sidebar-detail-item">
                    <span>Pages</span>
                    <span>{{ chapitre.pages|length }}</span>
                </div>
                <div class="sidebar-detail-item">
                    <span>Publié</span>
                    <span>{{ chapitre.createdAt|date('d/m') }}</span>
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <div class="sidebar-section">
            <h3 class="sidebar-title">🧭 Navigation</h3>
            <div class="sidebar-actions">
                {% if chapitre.previousChapitre %}
                <a href="{{ path('app_chapitre_show', {id: chapitre.previousChapitre.id}) }}" class="sidebar-btn sidebar-btn-primary">
                    ← Précédent
                </a>
                {% endif %}
                <a href="{{ path('app_oeuvre_show', {id: chapitre.oeuvre.id}) }}" class="sidebar-btn sidebar-btn-secondary">
                    📚 Tous
                </a>
                {% if chapitre.nextChapitre %}
                <a href="{{ path('app_chapitre_show', {id: chapitre.nextChapitre.id}) }}" class="sidebar-btn sidebar-btn-success">
                    Suivant →
                </a>
                {% endif %}
            </div>
        </div>

        <!-- Œuvre info -->
        <div class="sidebar-section">
            <h3 class="sidebar-title">📚 {{ chapitre.oeuvre.titre|length > 15 ? chapitre.oeuvre.titre|slice(0, 15) ~ '...' : chapitre.oeuvre.titre }}</h3>
            <div class="sidebar-details">
                {% if chapitre.oeuvre.auteur %}
                <div class="sidebar-detail-item">
                    <span>Auteur</span>
                    <span>{{ chapitre.oeuvre.auteur.nom }}</span>
                </div>
                {% endif %}
                <div class="sidebar-detail-item">
                    <span>Type</span>
                    <span>{{ chapitre.oeuvre.type|default('MANGA') }}</span>
                </div>
                <div class="sidebar-detail-item">
                    <span>Total</span>
                    <span>{{ chapitre.oeuvre.chapitres|length }} ch.</span>
                </div>
            </div>
        </div>
    </aside>
</div>


{% endblock %} 