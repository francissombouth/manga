document.addEventListener('DOMContentLoaded', function() {
    console.log('ğŸ” DOM loaded, vÃ©rification des images...');
    
    const images = document.querySelectorAll('.page-image');
    console.log('ğŸ“Š Nombre d\'images trouvÃ©es:', images.length);
    
    images.forEach((img, index) => {
        console.log(`ğŸ–¼ï¸ Image ${index + 1}:`);
        console.log('  - src:', img.src);
        console.log('  - data-original-url:', img.getAttribute('data-original-url'));
        
        // VÃ©rifier si l'URL contient le proxy
        if (img.src.includes('/proxy/image')) {
            console.error('âŒ PROXY DÃ‰TECTÃ‰ dans img.src:', img.src);
        } else {
            console.log('âœ… URL directe dans img.src');
        }
        
        if (img.getAttribute('data-original-url') && img.getAttribute('data-original-url').includes('/proxy/image')) {
            console.error('âŒ PROXY DÃ‰TECTÃ‰ dans data-original-url');
        }
    });
    
    // Observer les changements d'attributs
    const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
            if (mutation.type === 'attributes' && mutation.attributeName === 'src') {
                console.log('ğŸ”„ URL d\'image modifiÃ©e:', mutation.target.src);
                if (mutation.target.src.includes('/proxy/image')) {
                    console.error('âŒ PROXY INJECTÃ‰ par JavaScript !');
                }
            }
        });
    });
    
    images.forEach(img => {
        observer.observe(img, { attributes: true, attributeFilter: ['src'] });
    });
});
</script>

