{% block title %}{{ chapitre.titre }} - {{ chapitre.oeuvre.titre }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Suivi de progression de lecture
        document.addEventListener('DOMContentLoaded', function() {
            const progressIndicator = document.getElementById('progress-indicator');
            const progressFill = document.getElementById('progress-fill');
            const pages = document.querySelectorAll('.page-content');
            
            if (!progressIndicator || !progressFill || pages.length === 0) return;
            
            // Observer pour surveiller les pages visibles
            const progressObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const page = entry.target;
                        const pageNumber = parseInt(page.dataset.page);
                        const totalPages = pages.length;
                        
                        // Mettre √† jour l'indicateur
                        progressIndicator.textContent = `Page ${pageNumber} / ${totalPages}`;
                        
                        // Mettre √† jour la barre de progression
                        const progressPercent = (pageNumber / totalPages) * 100;
                        progressFill.style.width = progressPercent + '%';
                        
                        // Mettre √† jour l'URL sans recharger
                        const url = new URL(window.location);
                        url.searchParams.set('page', pageNumber);
                        window.history.replaceState({}, '', url);
                    }
                });
            }, {
                threshold: 0.5
            });
            
            // Observer toutes les pages
            pages.forEach(page => {
                progressObserver.observe(page);
            });
            
            // Aller √† une page sp√©cifique depuis l'URL
            const urlParams = new URLSearchParams(window.location.search);
            const startPage = urlParams.get('page');
            if (startPage && startPage > 1) {
                const targetPage = document.querySelector(`[data-page="${startPage}"]`);
                if (targetPage) {
                    setTimeout(() => {
                        targetPage.scrollIntoView({ behavior: 'smooth' });
                    }, 500);
                }
            }
        });
        
        // Raccourcis clavier pour la navigation
        document.addEventListener('keydown', function(e) {
            if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') {
                return; // Ignorer si on est dans un champ de saisie
            }
            
            switch(e.key) {
                case 'ArrowUp':
                case 'ArrowLeft':
                    e.preventDefault();
                    window.scrollBy(0, -window.innerHeight * 0.8);
                    break;
                case 'ArrowDown':
                case 'ArrowRight':
                case ' ':
                    e.preventDefault();
                    window.scrollBy(0, window.innerHeight * 0.8);
                    break;
                case 'Home':
                    e.preventDefault();
                    window.scrollTo(0, 0);
                    break;
                case 'End':
                    e.preventDefault();
                    window.scrollTo(0, document.body.scrollHeight);
                    break;
            }
        });
    </script>
{% endblock %}

{% block body %}
