                {% endif %}

                <div style="text-align: center;">
                    <a href="{{ path('app_oeuvre_show', {id: chapitre.oeuvre.id}) }}" style="background: rgba(139, 92, 246, 0.1); color: var(--accent-purple); padding: 0.8rem 2rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; border: 2px solid var(--accent-purple); display: inline-flex; align-items: center; gap: 0.5rem;">
                        üìö Voir tous les chapitres
                    </a>
                </div>

                {% if chapitre.nextChapitre %}
                    <a href="{{ path('app_chapitre_show', {id: chapitre.nextChapitre.id}) }}" style="background: var(--accent-purple); color: white; padding: 0.8rem 1.5rem; border-radius: 25px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.5rem;">
                        {{ chapitre.nextChapitre.titre }} ‚Üí
                    </a>
                {% else %}
                    <div></div>
                {% endif %}
            </div>
        </div>
    </main>

