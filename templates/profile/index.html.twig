{% extends 'base.html.twig' %}

{% block title %}Mon Profil - MangaThèque{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/pages/profile.css') }}">
{% endblock %}

{% block body %}
<div class="profile-container">
    <div class="profile-content">
        <div class="welcome-message">
            <span>🎉</span>
            <span>Bienvenue sur votre profil, {{ user.nom }} !</span>
        </div>

        <div class="profile-header">
            <div class="profile-avatar">
                👤
            </div>
            <h1 class="profile-name">{{ user.nom }}</h1>
            <p class="profile-email">{{ user.email }}</p>
        </div>

        <div class="profile-stats">
            <div class="stat-card">
                <div class="stat-number">{{ user.collections|length }}</div>
                <div class="stat-label">Collections</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ user.statuts|length }}</div>
                <div class="stat-label">Mangas suivis</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ user.createdAt|date('d/m/Y') }}</div>
                <div class="stat-label">Membre depuis</div>
            </div>
        </div>

        <div class="profile-actions">
            <h2 style="color: var(--text-primary); margin-bottom: 1.5rem; text-align: center;">
                🚀 Actions rapides
            </h2>
            
            <div class="actions-grid">
                <a href="{{ path('app_home') }}" class="action-btn">
                    <span>🏠</span>
                    <span>Retour à l'accueil</span>
                </a>
                
                <a href="{{ path('app_oeuvre_list') }}" class="action-btn">
                    <span>🔍</span>
                    <span>Rechercher des mangas</span>
                </a>
                
                <a href="{{ path('app_home') }}" class="action-btn">
                    <span>📚</span>
                    <span>Ma Collection</span>
                </a>
                
                <a href="{{ path('app_logout') }}" class="action-btn logout">
                    <span>🚪</span>
                    <span>Se déconnecter</span>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
